.panel-search
	transform skewX(30deg)
	width 580px
	height 70px
	border-bottom 1px solid #dbe0ea
	border-left 1px solid #dbe0ea

.search
	width 100%
	height 100%
	display flex
	justify-content flex-end
	align-items center
	transform skewX(-30deg)

.submit-search
	width 100%
	height 100%
	background-color transparent

.submit-search__wrap
	position relative
	transition 0.2s all ease-in-out
	transform skewX(30deg)
	height 70px
	width 90px
	z-index 1
	height 100%
	border-left 1px solid #dbe0ea

	&:before
		content ''
		position absolute
		display block
		background url('../../img/main/menu-search.png')
		transform skewX(-30deg)
		top 26px
		right 20px
		width 24px
		height 24px
		z-index 99
		cursor pointer
	
	&:hover
		background-color #2b3384
		border-color #2b3384

.submit-search__wrap:hover::before
	background url('../../img/main/menu-search-hover.png')

.search-input__wrap
	width 100%
	height 100%
	position relative
	display flex
	flex-direction column
	align-items flex-start
	justify-content center
	padding-left 50px

.search-bar
	width 50%
	display block
	transition all 0.5ms ease-in-out
	cursor text

.input-search:focus ~ .search-bar
	padding-top 2px
	border-bottom 3px solid semiViolet
	
.input-search
	cursor text

	&:focus ~ .search-input-label
		top 5px
		color semiViolet
		font-size 12px

.search-input-label 
	font-family 'HelveticaNeue-Light'
	font-size 14px
	color semiBlack
	letter-spacing 1.4px
	position absolute
	top 20px
	transition: all 0.2s ease 
	cursor text