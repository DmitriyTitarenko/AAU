@import '../base'
@import '../fonts'
@import '../reset'
@import '../vars'

.control-panel
	display flex
	justify-content space-between
    

	.panel-left, .panel-right
		display flex
		align-items flex-start
		justify-content flex-start
		max-width 810px
		width 100%

        

		.panel-calendar, .youtube, .instagram, .linkedin, .facebook, .telegram
			height 70px
			width 100%
			display flex
			justify-content center
			align-items center
			transform skewX(-30deg)
			transition 0.2s all ease-in-out

		.panel-calendar
			max-width 355px
			background-color semiViolet
			margin-left -20px

			.calend
				width 100%
				height 100%
				display flex
				align-items center
				justify-content center
				font-size 14px
				font-family 'Helvetica-Bold'
				color #FFFFFF
				letter-spacing 0.1em
				text-transform uppercase


				.transform
					transform skewX(30deg)
					display flex
					align-items center
					justify-content center

					img
						padding-right 15px

				&:hover
					background-color semiBlue

		.youtube, .instagram, .linkedin, .facebook, .telegram
			max-width 90px
			border-bottom 1px solid #dbe0ea
			border-right 1px solid #dbe0ea
			height 69px
			background-color #FFFFFF

			.yt, .insta, .linked, .fb, .teleg
				width 100%
				height 100%
				display flex
				align-items center
				justify-content center

				.transform
					transform skewX(30deg)
					display flex
					align-items center
					justify-content center

				.yt-hover, .insta-hover, .linked-hover, .fb-hover, .telegram-hover
					display none

				.transform
					transform skewX(30deg)
					display flex
					align-items center
					justify-content center

		.youtube

			&:hover
				border-color #d64848
				background-color #d64848


				.yt

					img
						display none

					.yt-hover
						display block
						width 100%
						height 100%

		.instagram

			&:hover
				border-color #e39362
				background-color #e39362

				.insta

					img
						display none

					.insta-hover
						display block
						width 100%
						height 100%

		.linkedin

			&:hover
				border-color #0080c6
				background-color #0080c6

				.linked

					img
						display none

					.linked-hover
						display block
						width 100%
						height 100%

		.facebook

			&:hover
				border-color #366199
				background-color #366199

				.fb

					img
						display none

					.fb-hover
						display block
						width 100%
						height 100%

		.telegram

			&:hover
				border-color #1a89c0
				background-color #1a89c0

				.teleg

					img
						display none

					.telegram-hover
						display block
						width 100%
						height 100%






.panel-login
	height 70px
	width 100%
	display flex
	justify-content center
	align-items center
	transform skewX(30deg)
	transition 0.2s all ease-in-out

.login, .registration
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
	font-size 14px
	font-family 'Helvetica-Bold'
	color #FFFFFF
	letter-spacing 0.1em
	text-transform uppercase

.transform
	transform skewX(-30deg)
	display flex
	align-items center
	justify-content center

	&:hover
		background-color #0080c6

.login
	&:hover
		background-color semiBlue

.panel-registration
	max-width 280px
	background-color semiPurple
	position relative	
	height 70px
	width 100%
	display flex
	justify-content center
	align-items center
	transition 0.2s all ease-in-out	

	&:after	
		position relative
		display block
		width 50px
		height 100%
		top 0 
		right 80%
		background semiPurple
		transform-origin bottom left
		transform skew(30deg, 0deg)
		z-index: 99
		content ''
		transition 0.2s all ease-in-out	
		cursor pointer

	&:hover
		background-color themeColor
		

.panel-registration:hover:after 
	background-color themeColor

.panel-login
	max-width 150px
	background-color semiViolet 
	z-index 1

	&:hover 
		background-color semiBlue

.panel-left--bottom
	justify-content flex-end
	padding-right 20px


.panel-subscribe 
	display flex
	flex-direction column
	color darkCerulean
	align-items center
	padding 10px 40px 10px 0
	

.panel-subscribe-title, .panel-subscribe-subtitle
