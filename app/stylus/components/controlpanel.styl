.subscribe-text
	transform skewX(-30deg)
	display flex
	align-items center
	justify-content center

	&:hover
		background-color semiPurple


.panel-btn--subscribe
	max-width 280px
	background-color #2d3484
	height 70px
	width 100%
	display flex
	justify-content center
	align-items center
	transition 0.2s all ease-in-out

	&:hover
		background-color semiPurple

.subscribe-link
	width 100%
	height 100%
	display flex
	align-items center
	justify-content center
	font-size 14px
	font-family 'Helvetica-Bold'
	color #FFFFFF
	letter-spacing 0.1em
	text-transform uppercase


.control-panel 

	.panel-right-btm
