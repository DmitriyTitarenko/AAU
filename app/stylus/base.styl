//-------------------------------------blog-entry------------------------------

.blog-entry
  display flex
  margin-bottom 45px

  .blog-entry-preview
    width 180px
    height 180px
    margin-top 5px

    img
      width 180px
      height 180px
      object-fit cover

  .blog-entry-text
    margin-left 40px

    .blog-heading
      margin-bottom 15px

    .blog-date
      color whiteColor
      font-size 14px
      line-height 24px
      letter-spacing 0.001em
      font-family 'HelveticaNeue-Bold'
      background url("../img/all/date-blog.png") no-repeat
      padding-left 22px
      position relative
      margin-bottom 20px

      &:after
        content ''
        display block
        height 1px
        width calc(100% - 110px)
        position absolute
        top 11px
        left 110px
        background-color semiPurple

    .blog-text-preview
      font-size 14px
      line-height 20px
      letter-spacing 0.025em
      margin-bottom 15px

    .read-more
      font-family 'HelveticaNeue-Black'
      font-size 12px
      line-height 24px
      letter-spacing 0.01em
      display flex
      align-items center
      justify-content flex-end
      color semiViolet 

      img
        margin-left 10px

      &:hover
        opacity 0.7




