.defaultTitle
    font-size 36px
    line-height 1.2em
    letter-spacing 0.05em
    font-family 'Helvetica-Bold'
    color semiViolet
    text-transform uppercase
    font-size 36px
        
    @media screen and (max-width: 510px) {
        font-size 30px
        letter-spacing 1.5px
        text-align center
    }

.separator
    margin 20px 0 40px 0
    position relative
    height 11px
    display flex
  
    &:after
        content ''
        display block
        height 1px
        width calc(100% - 20px)
        background-color themeColor
        position absolute
        top 5px
        right 0

        @media screen and (max-width: 510px) {
            width 100%
        }

    @media screen and (max-width: 510px) {
        justify-content center
    }

.defaultSubTitle
    color #5c77b3
    font-weight 400
    letter-spacing 1.2px
    font-size 24px
    margin-bottom 47px


//////article
.stndrt__text
    font-family 'HelveticaNeue-Light'
    line-height 30px
    color semiBlack
    font-size 16px
    text-align justify
    margin-bottom 20px

    @media screen and (max-width: 510px) {
        text-align center
        line-height 24px
        font-size 16px
    }

    &:not(:last-child)
        margin-bottom 20px

        @media screen and (max-width: 510px) {
            margin-bottom 30px
        }


.typical-container
    max-width 1920px
    width 100%
    margin auto
    padding 100px 20px


//------------------------blog-------------------------

.blog
    display flex
    justify-content space-between
    position relative
    margin 100px auto

.blog-entry
    display flex
    margin-bottom 50px

    @media screen and (max-width: 510px) {
        flex-direction column
        justify-content center
    }

.blog-entry__wrapimage
    max-width 180px
    max-height 180px
    height 100%
    width 100%

    @media screen and (max-width: 510px) {
        margin 0 auto
    }

    img
        width 180px
        height 180px
        object-fit cover


.blog-entry__wraptext
    margin-left 40px

    @media screen and (max-width: 510px) {
        margin-left 0
    }

.blog-entry__title
    font-weight 500
    font-family 'HelveticaNeue-Bold'
    font-size 18px
    color semiViolet
    margin-bottom 15px
    line-height 24px
    padding-right 15px

    @media screen and (max-width: 510px) {
        text-align center
        width 100%
        padding 0
        margin-top 20px
    }

.blog-entry__date
    font-family 'HelveticaNeue-Bold'
    font-size 14px
    color whiteColor
    line-height 24px
    letter-spacing 0.001em
    background url("../../img/all/date-blog.png") no-repeat
    position relative
    margin-bottom 20px
    padding-left 22px

    @media screen and (max-width: 510px) {
        text-align center
        background-position center
        padding 0
    }

    &:after
        content ''
        display block
        height 1px
        width calc(100% - 110px)
        position absolute
        top 11px
        left 110px
        background-color semiPurple

        @media screen and (max-width: 510px) {
            width 100%
            left 0
            z-index -1
        }

.blog-entry__preview
    font-weight 300
    font-family 'HelveticaNeue-Light'
    font-size 14px
    color semiBlack
    line-height 20px
    letter-spacing 0.025em
    margin-bottom 15px
    letter-spacing 0.35px
    padding-right 25px

    @media screen and (max-width: 510px) {
        text-align center
        padding 0
    }

.blog-entry__more
    font-family 'HelveticaNeue-Black'
    font-size 12px
    font-weight 400
    line-height 24px
    letter-spacing 0.01em
    display flex
    align-items center
    justify-content flex-end
    color semiPurple

    @media screen and (max-width: 510px) {
        justify-content center
    }

    &:after 
        display block
        content ''
        right 50%
        top 0
        width 24px
        height 20px
        background url('../../img/all/read-more.png')
        margin-left 10px

    &:hover
        opacity 0.7



.blog-entry__btn-group 
    display flex
    margin-top auto
    justify-content space-between
    align-items center
    
    .btn-m
        margin-left 20px

        @media screen and (max-width: 510px) {
            margin 10px 0 0 0
        }

    @media screen and (max-width: 510px) {
        flex-direction column
    }

    a
        @media screen and (max-width: 510px) {
            max-width none
        }
    

.container
    max-width 1280px
    width 100%
    padding 100px 0
    box-sizing border-box
    margin 0 auto

    @media screen and (max-width: 1280px) {
        padding 80px 0
    }

    @media screen and (max-width: 510px) {
        padding 40px 0
    }
 


//----------------------------header--------------------------------

header
	margin-bottom 20px
	border-bottom 1px solid #dbe0ea
	display flex
	flex-direction column

	@media screen and (max-width: 630px) {
		height 180px
		padding-bottom 20px
	}

 //---------menu----------------------

.main-menu
	display flex
	justify-content center
	padding 0 40px
	height 80px
	position relative

	@media screen and (max-width: 1280px) {
		padding 0 20px
	}
 
.logo-wrap 
	align-self center
	position absolute
	right 50%
	margin-bottom 70px

	@media screen and (max-width: 1280px) {
		margin-bottom 40px
		right 45%
	}

	@media screen and (max-width: 720px) {
		right 47%
	}

	@media screen and (max-width: 630px) {
		right 40%
		margin 20px 0 20px 0
	}

	@media screen and (max-width: 375px) {
		right 37%	
	}


	
	img
		@media screen and (max-width: 1440px) {
			width 123px
			height 90px
		}

		@media screen and (max-width: 720px) {
			width 96px
			height 70px
		}

.menu-block-left, .menu-block-right
	width 50%
	margin 30px 0 25px

	
	@media screen and (max-width: 1281px) {
		display block
	}

	@media screen and (max-width: 1280px) {
		display none
	}


.menu
	display flex

.menu-block-left
	.menu
		justify-content flex-end
		margin-right 200px

		@media screen and (max-width: 1440px) {
			justify-content flex-start
			margin 0
		}

	.menu-item:nth-of-type(2)
		max-width 150px

	.menu-item:nth-of-type(4)
		max-width 80px

.menu-block-right
	.menu
		justify-content flex-start
		margin-left 30px

		@media screen and (max-width: 1550px) {
			justify-content center
		}

		@media screen and (max-width: 1450px) {
			justify-content flex-start
		}

.menu-item
	z-index 99
	text-align center
	box-sizing: border-box
	max-width 100px
	width 100%

	a
		font-size 14px
		font-family 'HelveticaNeue-Medium'
		color semiBlack
		text-transform uppercase
		letter-spacing 0.025em
		line-height 1.2em
		position relative
		width 100%
		padding-right 3px

		&:before 
			content ""
			position absolute
			left 50%
			bottom 0
			width 0
			height 3px
			background semiViolet
			transform translateX(-50%)
			transition width 0.2s ease-in-out

	&:hover

		a
			color semiViolet

		&:after
			border-top 4px solid semiViolet 
						
			&:before
				width 100%

		.submenu
			display block

		.item-with-sublist::after 
			border-top-color semiViolet


.menu-item:not(:last-child)
	margin-right 20px

	@media screen and (max-width: 1370px) {
		margin-right 5px
	}

//////////!* Start style for triangle in main navigation

.item-with-sublist, .submenu-item__link
	position relative

	&:after
		position absolute
		content ''
		width 0
		height 0
		border-left 4px solid transparent
		border-right 4px solid transparent
		border-top 4px solid semiBlack 
		top 50%
		

.submenu-item__link::after
	right 5px

.item-with-sublist::after 
	left 100%


//////////!* End style for triangle in main navigation

.submenu
	display none
	position absolute
	padding-top 31px
	z-index 99
	font-size 12px
	text-align left
	background transparent

	&:hover
		display block

.submenu
	.submenu-item
		width 100%
		background-color semiWhite
		transition all .2s ease-in-out
		position relative

		&:hover
			.item-with-sublist::after, .submenu-item__link::after
				border-top-color #fff

			.second-submenu
				display block

		a	
			display block
			width 100%
			height 100%
			padding 5px
			background-color semiWhite
			color submenuItemText
			font-family 'Helvetica-Bold', 'sans-serif'
			padding 15px 0px 10px 10px
			margin-right 10px
			text-transform none

			&:hover
				cursor pointer
				color whiteColor
				background-color semiViolet
				text-transform uppercase


//-------------------------------- second submenu-------------------//
.second-submenu
	display none
	position absolute
	left 100%
	top 0%
	margin-left 10px
	width 230px

	.submenu-item
		width 100%

		a
			text-transform none
			padding 15px 0 10px 10px

			&:hover
				text-transform uppercase
			

.submenu .submenu-item:hover .submenu-item__link
    background semiViolet
    color whiteColor


//-------------------------------video-------------------------

.video
    max-width 420px
    width 100%
    max-height 248px
    height 100%
    border 10px solid whiteColor
    box-shadow -4.774px 5.119px 29px 0px rgba(0, 0, 0, 0.54)
    display flex
    align-items center
    justify-content center

    iframe 
        width 100%
        height 100%


//-------------------------------slider------------------------
.tpc-slider__wrap
	max-width 1300px
	width 100%
	margin 0 auto
	box-sizing border-box


.tpc-slider__slide
	display flex
	justify-content center
	margin-bottom 20px

.tpc-slider__slide--img---wrap
	max-width 190px
	width 100%
	height 130px
	position relative
	left 0
	display flex
	justify-content center
	align-items center
	border 1px dotted #ccc
	background-color whiteColor

.tpc-slider__slide--img
	max-width 80%
	max-height 80%
	object-fit cover


.tpc-slider
	.container
		max-width 1340px

		.heading
			padding 0 15px


//-------------------------------------dots------------

.main-dots
	display flex
	justify-content center
	padding 40px 0 

	@media screen and (max-width: 320px) {
		flex-wrap: wrap
	}

	li
		position relative
		height 10px
		padding 0
		cursor pointer

		:nth-child(n+7)
			margin-top 10px

		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/dots.png") no-repeat

		&:hover
			cursor pointer

		&:nth-child(odd)
			top 9px

		&:nth-child(1), &:nth-child(3), &:nth-child(5)
			top 9px

		button
			background-color transparent
			font-size 10px
			color transparent

	.slick-active
		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/dots-active.png") no-repeat

