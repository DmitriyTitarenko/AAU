////// Эта часть отвечает за стилизацию инпута в стиле Google Material Design

.typical__input-wrap
    position relative
    display flex
    flex-direction column
    align-items flex-start
    justify-content center

    &:hover
        cursor text

.typical__input
    width 100%
    height 100%
  
	&:focus ~ .typical__input-bar
        top 5px
        color semiViolet
        font-size 12px
    
    &:hover
        cursor text

.typical__input-label
    font-family 'HelveticaNeue-Light'
    font-size 14px
    color semiBlack
    letter-spacing 1.4px
    transition: all 0.2s ease
    position absolute
    top 20px

    &:hover
        cursor text

.typical__input-bar
    width 100%
    display block
    transition all 0.2ms ease-in-out
    cursor text
    bottom 10px

.typical__input:focus ~ .typical__input-bar
    padding-top 2px
    border-bottom 3px solid semiViolet
	
    &:focus ~ .typical__input-label
        top 50px
        color semiViolet
        font-size 12px
        position absolute
        