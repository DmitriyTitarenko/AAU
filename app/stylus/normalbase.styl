@import 'base'
@import 'fonts'
@import 'reset'
@import 'vars'

button
    a
        width 100%
        height 100%

.btn__generalstyle
    display flex
    justify-content center
    box-sizing border-box
    width 100%

.btn__medium    
    max-width 330px
    height 80px
    background-color semiPurple 
    color whiteColor
    border 2px solid semiPurple
    line-height 76px

    &:hover
        color semiPurple
        border 2px solid semiPurple
        background-color whiteColor

////// Эта часть отвечает за стилизацию инпута в стиле Google Material Design

.typical__input-wrap
    position relative
    display flex
    flex-direction column
    align-items flex-start
    justify-content center

    &:hover
        cursor text

.typical__input
    width 100%
    height 100%
  
	&:focus ~ .typical__input-bar
        top 5px
        color semiViolet
        font-size 12px
    
    &:hover
        cursor text

.typical__input-label
    font-family 'HelveticaNeue-Light'
    font-size 14px
    color semiBlack
    letter-spacing 1.4px
    transition: all 0.2s ease
    position absolute
    top 20px

    &:hover
        cursor text

.typical__input-bar
    width 100%
    display block
    transition all 0.2ms ease-in-out
    cursor text
    bottom 10px

.typical__input:focus ~ .typical__input-bar
    padding-top 2px
    border-bottom 3px solid semiViolet
	
    &:focus ~ .typical__input-label
        top 50px
        color semiViolet
        font-size 12px
        position absolute


.defaultTitle
    font-size 36px
    line-height 1.2em
    letter-spacing 0.05em
    font-family 'Helvetica-Bold'
    color semiViolet
    text-transform uppercase
    font-size 36px
        
    @media screen and (max-width: 510px) {
        font-size 30px
        text-align center
    }

.separator
    margin 20px 0 40px 0
    position relative
    height 11px
    display flex
  
    &:after
        content ''
        display block
        height 1px
        width calc(100% - 20px)
        background-color themeColor
        position absolute
        top 5px
        right 0

        @media screen and (max-width: 510px) {
            width 100%
        }

    @media screen and (max-width: 510px) {
        justify-content center
    }

.defaultSubTitle
    color #5c77b3
    font-weight 400
    letter-spacing 1.2px
    font-size 24px
    margin-bottom 47px


//////article
.stndrt__text
    font-family 'HelveticaNeue-Light'
    line-height 30px
    color semiBlack
    font-size 16px
    text-align justify
    margin-bottom 20px

    @media screen and (max-width: 510px) {
        text-align center
        line-height 24px
        font-size 16px
    }

    &:not(:last-child)
        margin-bottom 20px

        @media screen and (max-width: 510px) {
            margin-bottom 30px
        }


.typical-container
    max-width 1920px
    width 100%
    margin auto
    padding 100px 20px