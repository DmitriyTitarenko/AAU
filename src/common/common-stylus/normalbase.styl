.defaultTitle
    font-size 36px
    line-height 1.2em
    letter-spacing 0.05em
    font-family 'Helvetica-Bold'
    color semiViolet
    text-transform uppercase
    font-size 36px
        
    @media screen and (max-width: 510px) {
        font-size 30px
        letter-spacing 1.5px
        text-align center
    }

.separator
    margin 20px 0 40px 0
    position relative
    height 11px
    display flex
  
    &:after
        content ''
        display block
        height 1px
        width calc(100% - 20px)
        background-color themeColor
        position absolute
        top 5px
        right 0

        @media screen and (max-width: 510px) {
            width 100%
        }

    @media screen and (max-width: 510px) {
        justify-content center
    }

.defaultSubTitle
    color #5c77b3
    font-weight 400
    letter-spacing 1.2px
    font-size 24px
    margin-bottom 47px


//////article
.stndrt__text
    font-family 'HelveticaNeue-Light'
    line-height 30px
    color semiBlack
    font-size 16px
    text-align justify
    margin-bottom 20px

    @media screen and (max-width: 510px) {
        text-align center
        line-height 24px
        font-size 16px
    }

    &:not(:last-child)
        margin-bottom 20px

        @media screen and (max-width: 510px) {
            margin-bottom 30px
        }


.typical-container
    max-width 1920px
    width 100%
    margin auto
    padding 100px 20px


//------------------------blog-------------------------

.blog
    display flex
    justify-content space-between
    position relative
    margin 100px auto

.blog-entry
    display flex
    margin-bottom 50px

    @media screen and (max-width: 510px) {
        flex-direction column
        justify-content center
    }

.blog-entry__wrapimage
    max-width 180px
    max-height 180px
    height 100%
    width 100%

    @media screen and (max-width: 510px) {
        margin 0 auto
    }

    img
        width 180px
        height 180px
        object-fit cover


.blog-entry__wraptext
    margin-left 40px

    @media screen and (max-width: 510px) {
        margin-left 0
    }

.blog-entry__title
    font-weight 500
    font-family 'HelveticaNeue-Bold'
    font-size 18px
    color semiViolet
    margin-bottom 15px
    line-height 24px
    padding-right 15px

    @media screen and (max-width: 510px) {
        text-align center
        width 100%
        padding 0
        margin-top 20px
    }

.blog-entry__date
    font-family 'HelveticaNeue-Bold'
    font-size 14px
    color whiteColor
    line-height 24px
    letter-spacing 0.001em
    background url("../../img/all/date-blog.png") no-repeat
    position relative
    margin-bottom 20px
    padding-left 22px

    @media screen and (max-width: 510px) {
        text-align center
        background-position center
        padding 0
    }

    &:after
        content ''
        display block
        height 1px
        width calc(100% - 110px)
        position absolute
        top 11px
        left 110px
        background-color semiPurple

        @media screen and (max-width: 510px) {
            width 100%
            left 0
            z-index -1
        }

.blog-entry__preview
    font-weight 300
    font-family 'HelveticaNeue-Light'
    font-size 14px
    color semiBlack
    line-height 20px
    letter-spacing 0.025em
    margin-bottom 15px
    letter-spacing 0.35px
    padding-right 25px

    @media screen and (max-width: 510px) {
        text-align center
        padding 0
    }

.blog-entry__more
    font-family 'HelveticaNeue-Black'
    font-size 12px
    font-weight 400
    line-height 24px
    letter-spacing 0.01em
    display flex
    align-items center
    justify-content flex-end
    color semiPurple

    @media screen and (max-width: 510px) {
        justify-content center
    }

    &:after 
        display block
        content ''
        right 50%
        top 0
        width 24px
        height 20px
        background url('../../img/all/read-more.png')
        margin-left 10px

    &:hover
        opacity 0.7



.blog-entry__btn-group 
    display flex
    margin-top auto
    justify-content space-between
    align-items center
    
    .btn-m
        margin-left 20px

        @media screen and (max-width: 510px) {
            margin 10px 0 0 0
        }

    @media screen and (max-width: 510px) {
        flex-direction column
    }

    a
        @media screen and (max-width: 510px) {
            max-width none
        }
    

.container
    max-width 1280px
    width 100%
    padding 100px 0
    box-sizing border-box
    margin 0 auto

    @media screen and (max-width: 1280px) {
        padding 80px 0
    }

    @media screen and (max-width: 510px) {
        padding 40px 0
    }
 
//-------------------------------video-------------------------

.video
    max-width 420px
    width 100%
    max-height 248px
    height 100%
    border 10px solid whiteColor
    box-shadow -4.774px 5.119px 29px 0px rgba(0, 0, 0, 0.54)
    display flex
    align-items center
    justify-content center

    iframe 
        width 100%
        height 100%


//-------------------------------slider------------------------
.tpc-slider__wrap
	max-width 1300px
	width 100%
	margin 0 auto
	box-sizing border-box


.tpc-slider__slide
	display flex
	justify-content center
	margin-bottom 20px

.tpc-slider__slide--img---wrap
	max-width 190px
	width 100%
	height 130px
	position relative
	left 0
	display flex
	justify-content center
	align-items center
	border 1px dotted #ccc
	background-color whiteColor

.tpc-slider__slide--img
	max-width 80%
	max-height 80%
	object-fit cover


.tpc-slider
	.container
		max-width 1340px

		.heading
			padding 0 15px


//-------------------------------------dots------------

.main-dots
	display flex
	justify-content center
	padding 40px 0 

	@media screen and (max-width: 320px) {
		flex-wrap: wrap
	}

	li
		position relative
		height 10px
		padding 0
		cursor pointer

		:nth-child(n+7)
			margin-top 10px

		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/dots.png") no-repeat

		&:hover
			cursor pointer

		&:nth-child(odd)
			top 9px

		&:nth-child(1), &:nth-child(3), &:nth-child(5)
			top 9px

		button
			background-color transparent
			font-size 10px
			color transparent

	.slick-active
		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/dots-active.png") no-repeat

