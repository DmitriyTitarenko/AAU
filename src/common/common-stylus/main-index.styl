@import 'components/general-footer'
@import 'components/controlpanel'
@import 'components/footer'
@import 'components/sliders'
@import 'vars'

h2 
    color semiViolet
    font-family 'Helvetica-Bold'
    font-size 36px
    line-height 36px
    letter-spacing 1.8px
    text-transform uppercase
    
    @media screen and (max-width: 500px){
        font-size 30px
        text-align center
        }

h3
    color lightViolet 
    letter-spacing 1.2px
    font-size 30px
    line-height 30px
    font-family 'HelveticaNeue-Roman'
    font-weight 400
    
    @media screen and (max-width: 510px) {
        text-align center
        font-size 18px
        letter-spacing 0.9px
    }

//---------------------------------about
.checklist-item
    position relative
    font-family 'HelveticaNeue-Light'
    line-height 30px
    padding-left 60px
    margin-bottom 20px
    color: #4a4b4d
    max-height 50px
    height 100px

    &:before
        content ''
        display block
        background url('../../img/all/icon-check.png')
        width 43px
        height 50px
        left 0
        top 0
        position absolute
        transform translateY(-25%)

.about-stndrt
    .media-partners__title, .partners-committee__title
        font-size 30px

    .subsliders
        display flex
        justify-content center
        width 100%

        @media screen and (max-width: 1280px){
            flex-direction column
            }
        
        .media-partners, .partners-committee
            max-width 600px
            width 100%
            
            @media screen and (max-width: 1280px){
                max-width none
                }

        .media-partners
            padding 0 20px

            @media screen and (max-width: 1500px){
                padding 0
                }

            .media-partners__heading
                width 625px
            
            .media-partners__wrap
                margin-left 15px
                
                @media screen and (max-width: 1280px){
                margin 0
                }

        .partners-committee
            margin-right 40px

            @media screen and (max-width: 1280px){
                margin 0
                }

 .about-stndrt
    .container
        @media screen and (max-width: 1280px) {
            padding 60px 35px
        }

.structure__text-link
    color semiViolet
    text-decoration underline
    text-transform none
    font-family 'HelveticaNeue-Bold'
    font-weight 700
    
    &:hover
        color: semiPurple



//---card worker

.worker
    display flex
    flex-direction column
    width 290px
    height 500px

.worker__img-wrap
    height 400px

    img
        width 290px
        height 400px
        object-fit cover

.worker__text-wrap
    height 100px
    background url('../img/staff/bottom__bg.jpg')

    .worker__text
        font-family 'HelveticaNeue-Black'
        font-size 18px
        letter-spacing 0.9px
        color whiteColor 
        margin 30px
        text-align: center

.worker__wishes
    margin-top auto
    align-self flex-end
    position relative

    &:before
        content ''
        width 5px
        background-color semiPurple
        display block
        height 100%
        left 0
        position absolute

.worker__wishes-text
    margin-left 20px
    font-style italic
    letter-spacing 0.8px
    font-size 16px
    color semiPurple
    font-family 'HelveticaNeue-Bold'
    font-weight 400
    line-height 24px

.worker-card
    margin-top 45px
    display flex

.worker-card__article
    margin-left 40px
    display flex
    flex-direction column