// calendar style
.fc-toolbar.fc-header-toolbar
	background-color #2d3484
	color: #ffffff
	display flex
	flex-direction column-reverse
	position relative
	min-height: 130px
	height 100%
	justify-content space-between
	align-items center
	margin-bottom 1px

.fc-view-container
	.fc-head
		margin-bottom 1px
.fc-left
	.fc-button-group
		height 30px
		display flex
		justify-content space-between

		.fc-button.fc-state-default
			background-color: #94bee7
			height 30px
			font-family 'HelveticaNeue-Bold', sans-serif
			font-size 14px
			color #2d3484
			text-transform uppercase
			width calc(50% - 40px)
			position relative
		
			&:before
				content ''
				display block
				position absolute
				top 0%
				width 40px
				height 30px
				background-color: #5c77b3
				background-repeat: no-repeat
				background-position: center center 

		.fc-corner-left.fc-prev-button
			margin-left auto

			&:before
				left -40px
				background-image: url('../img/all/left.png')

		.fc-corner-right.fc-next-button
			margin-right auto

			&:before
				width 41px
				right -40px
				background-image url('../img/all/right.png')

