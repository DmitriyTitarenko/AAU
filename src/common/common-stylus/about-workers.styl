// START STYLE FOR DEPARTMENTS
// 
//////////////////////////////////////////////////////////
.departments-subtitle {
    font-family 'HelveticaNeue-Roman', sans-serif
    font-size 24px
    line-height 30px
    color semiPurple
    }
        
.intro__descr.departments-intro
    margin-top 55px
    
.departments-contancts
    color semiBlack
    font-family 'HelveticaNeue-Black', sans-serif
    font-size 16px

.departments-list
    display flex
    flex-wrap wrap
    justify-content flex-start

.departments-list__item
    max-width 290px
    max-height 520px
    height 100%
    width 100%
    display flex
    flex-direction column
    margin-right 40px
    margin-bottom 40px

    &:nth-child(4n){
        margin-right 0
    }



.departments-list__item-region
    height 60px
    width 100%
    background-color semiViolet
    display flex
    justify-content center
    align-items center

.departments-list__item:nth-child(1)
    .departments-list__item-region
        align-items flex-start

//for ARK

.departments-list__item-region--title
    font-family 'HelveticaNeue-Bold', sans-serif
    color #ffffff
    font-size 16px
    text-align center
    white-space pre-line
    width 100%
    text-transform uppercase
    height auto

.departments-list__item-img
    width 290px
    height 350px
    object-fit cover

.departments-list__item-descr
    width 100%
    height 105px
    background: url('../img/staff/bottom__bg.png') 
    background-size cover
    display flex
    flex-direction column
    align-items center
    justify-content center

.departments-list__item-descr--name
    font-size 18px
    color whiteColor
    text-transform uppercase
    font-family 'HelveticaNeue-Black', sans-serif
    white-space pre-line
    text-align center

.departments-list__item-descr--contacts
    color whiteColor 
    font-size 14px
    font-family 'HelveticaNeue-Medium'
    text-transform: none 
    margin-top 20px
    position relative
    transition all 0.5s ease
    letter-spacing: -0.5px;
    display flex
    align-items center
    width 100%

    &:hover
        color rgba(255, 255, 255, .5)

        &:before
            opacity 0.5 

    &:before
        display inline-block
        margin-right 20px
        content: ''
        width 20px
        height 14px
        background url('../img/staff/mail.png') center center no-repeat
        transition all 0.5s ease
        margin-left 20px

    
    
