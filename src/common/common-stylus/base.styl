

a
  font-family 'Helvetica-Bold'
  font-size 16px
  text-transform none
  letter-spacing 0.1px
  color semiPurple
  transition .2s all ease-in-out


//------------------------------button------------------------------
.btn
  width 100%
  display flex
  justify-content center
  align-items: center
  height 80px
  box-sizing border-box
  text-transform uppercase

  @media screen and (max-width 767px)
    max-height 60px
    line-height: auto

.btn-xl
  max-width 440px
  background-color whiteColor
  text-transform uppercase

  &:hover
    background-color semiPurple
    color whiteColor
    border none 

.btn-l
  max-width 330px
  background-color semiPurple
  color whiteColor
  border 2px solid semiPurple
  font-size 16px
  letter-spacing 1.6px
  font-family 'Helvetica-Bold', sans-serif
  text-transform uppercase
  
  &:hover
    background-color transparent
    color semiPurple  
    border 2px solid semiPurple

.btn-m
  max-width 310px
  background-color transparent
  border 2px solid semiPurple
  line-height 76px
  text-transform uppercase

  &:hover
    background-color semiPurple
    color whiteColor
    border 2px solid semiPurple

.btn-s
  max-width 290px
  background-color transparent
  border 2px solid whiteColor
  color whiteColor
  line-height 76px
  text-transform uppercase

  &:hover
    background-color whiteColor
    color themeColor
    border 2px solid whiteColor


.btn-asidemenu
  max-width 240px
  background-color transparent
  border 2px solid whiteColor
  color whiteColor
  text-transform uppercase
  font-family 'Helvetica-Bold'


  &:hover
    background-color whiteColor
    color themeColor
    border 2px solid whiteColor


.btn-xs
  max-width 220px
  background-color semiPurple 
  color whiteColor
  border 2px solid semiPurple
  line-height 76px

  &:hover
    color semiPurple
    border 2px solid semiPurple
    background-color whiteColor




