@import '../../common/common-stylus/vars'

.ntfnd-wrap.container
    display flex
    flex-direction: column
    justify-content center
    text-align center
    padding 60px 0 90px

    @media screen and (max-width: 767px){
        padding: 40px 0 50px;
    }

.ntfnd-title
    font-size 36px
    font-family 'HelveticaNeue-Bold', sans-serif
    color semiViolet
    margin-bottom 30px

    @media screen and (max-width: 767px){
        font-size: 24px
    }

.ntfnd-subtitle
    font-size 100px
    color semiPurple
    font-family 'HelveticaNeue-Black', sans-serif
    letter-spacing 0.1em
    z-index 10 
    margin-right: 20px

    @media screen and (max-width: 767px){
        font-size: 72px
        letter-spacing: 0
        margin-right 10px
    }

    

.ntfnd-subtitle__descr
    font-size 24px
    display block
    color semiViolet
    font-family 'HelveticaNeue-Bold', sans-serif
    text-transform uppercase
    letter-spacing 0.1em
    line-height 0px
    z-index 10

    @media screen and (max-width: 767px){
        font-size: 18px
    }


.ntfnd-img
    width 701px
    height 432px
    margin 0 auto
    z-index 1

    @media screen and (max-width: 767px){
        width 301px
        height 186px
    }
    

.ntfnd-descr
    margin-top 30px
    font-size 18px
    line-height 36px
    font-family 'HelveticaNeue-Roman', sans-serif

    @media screen and (max-width: 767px){
        font-size 16px
        line-height 24px
        max-width: 270px
    }

.ntfnd-btn
    font-size 16px
    color whiteColor
    font-family 'HelveticaNeue-Bold', sans-serif
    background-color semiPurple
    max-width 400px
    max-height 70px
    width 100%
    height 100%
    margin 55px auto 0
    display flex
    align-items center
    justify-content center
    padding 30px 0
    border 2px solid transparent

    &:hover
        background-color transparent
        border 2px solid semiPurple
        color semiPurple

    @media screen and (max-width: 767px){
        font-size 12px
        max-width 280px
        max-height 40px
        padding 15px 0
        margin 30px auto 0
    }