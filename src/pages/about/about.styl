@import '../../common/common-stylus/vars'
@import '../../common/common-stylus/components/controlpanel'
@import '../../common/common-stylus/components/footer'


//-------------------------------------------general_style-------------------------------------
.about-aau
    .about-aau__principle, .about-aau__objective
        .container
            flex-direction column

.about-aau
    h2
        font-size 24px
        font-weight 500
//-----------------------------------------end_general_style-------------------------------------


section:nth-of-type(even):not(:nth-of-type(6))
    background-color #f0f2f4

.about-aau__intro-wrap
    display flex
    justify-content space-between
    align-items center

.about-aau__intro-article
    width 50%

.about-aau__intro-video
    align-self flex-end
    width 440px
    height 248px
    margin-bottom 20px

.about-aau__list
    display flex
    justify-content space-between
    flex-wrap wrap
    padding 0 5px

.about-aau__list-item
    max-width 330px
    width 100%
    max-height 50px
    height 100px
    font-size 20px
    line-height 30px
    color: #4a4b4d
    position relative
    padding-left 60px
    margin-bottom 20px
    font-family 'HelveticaNeue-Light'
    
    &:before
        content ''
        display block
        background url('../../img/all/icon-check.png')
        width 43px
        height 50px
        left 0
        top 0
        position absolute
        transform translateY(-25%)


.main-info
    display flex
    justify-content center

    .structure
        max-width 811px
    
    .documents
        max-width 320px




//-----------------------------------------start block documents-------------------------------------


//-----------------------------------------end block documents-------------------------------------

//-----------------------------------------sliders-------------------------------------

.about-aau--subsliders
    display flex
    justify-content center
    width 100%
    background whiteColor

    .general-partners
        width 100%
        max-width 600px
    
    .media-partners
        max-width 680px
        width 100%


.about-aau
    .media-partners__title, .partners-committee__title
        font-size 30px

.partners-committee, .media-parners
    max-width 600px

    .tpc-slider__slide
        max-width 190px
        max-height 130px
        width 100%
        height 100%
        margin-right 15px

.partners-committee
    margin-right 40px

