@import '../../common/common-stylus/vars'
@import '../../common/common-stylus/components/controlpanel'
@import '../../common/common-stylus/components/footer'


//-------------------------------------------general_style-------------------------------------
.about-aau
    .about-aau__principle, .about-aau__objective
        .container
            flex-direction column

.about-aau
    h2
        font-size 24px
        font-weight 500
//-----------------------------------------end_general_style-------------------------------------


section:nth-of-type(even):not(:nth-of-type(6))
    background-color semiGray

.about-aau__intro-wrap
    display flex
    justify-content space-between
    align-items center

.about-aau__intro-article
    width 50%

.about-aau__intro-video
    align-self flex-end
    width 440px
    height 248px
    margin-bottom 20px

.about-aau__list
    display flex
    justify-content space-between
    flex-wrap wrap
    padding 0 5px

.about-aau__list-item
    max-width 330px
    width 100%
    max-height 50px
    height 100px
    font-size 20px
    line-height 30px
    color: #4a4b4d
    position relative
    padding-left 60px
    margin-bottom 20px
    font-family 'HelveticaNeue-Light'
    
    &:before
        content ''
        display block
        background url('../../img/all/icon-check.png')
        width 43px
        height 50px
        left 0
        top 0
        position absolute
        transform translateY(-25%)


.main-info
    display flex
    justify-content center

.structure
    max-width 1200px
    width 100%
    padding 100px 70px 100px 0
    display flex
    flex-direction column
    align-items flex-end


    .structure__heading, .structure__article
        max-width 811px

.structure__heading
    align-self center
    margin-left 20px

.structure__text-link
    color semiViolet
    text-decoration underline
    text-transform none
    font-family 'HelveticaNeue-Bold'
    font-weight 700
    
    &:hover
        color: semiPurple

//-----------------------------------------start block documents-------------------------------------
.documents
    background url('../img/about/main-bg.jpg')
    background-repeat round
    max-width 720px
    width 100%
    padding 100px 0 100px 70px
    
    .structure__heading-left
        max-width 330px
        width 100%

        .structure__title-left
            color whiteColor 
            text-transform none

        .separator
            &:after
                background-color whiteColor 

.documents__list-item
    display flex
    flex-direction column
    margin-bottom 60px

.documents__list-item--link
    color whiteColor
    text-transform none
    font-size 16px
    line-height 36px
    text-decoration underline
    letter-spacing 0.8px
    font-family 'HelveticaNeue-Bold'

    &:hover
        font-family 'HelveticaNeue-Black'



//-----------------------------------------end block documents-------------------------------------

//-----------------------------------------sliders-------------------------------------

.about-aau--subsliders
    display flex
    justify-content center
    width 100%
    background semiGray
    
    .media-partners
        max-width 680px
        width 100%


.about-aau
    .media-partners__title, .partners-committee__title, .general-partners__title
        font-size 30px

    .tpc-slider__slide
        max-width 190px
        max-height 130px
        width 100%
        height 100%
        margin-right 25px

.partners-committee
    margin-right 40px
    max-width 600px

.about-aau
    .about-aau--subsliders 
        .media-partners
            max-width 700px
            padding 0 20px

            