.contacts-form__wrap
    display block
    position relative
    width 100%
    height 695px
    background url('../img/contacts/bg.jpg') center center no-repeat

    &:before,
    &:after
        content: ''
        position absolute 
        top 0

    &:before
        background  url('../img/contacts/sota-left.png')
        left 0
        width 520px
        height 340px
    
    &:after
        background  url('../img/contacts/sota-right.png')
        right 0
        width 600px
        height 350px


