@import '../../common/common-stylus/vars'

.contacts
    display flex
    flex-direction column

    .tpc-slider.general-partners
        background-color #f0f2f4
        z-index 10


.contacts-wrap
    display flex
    margin-bottom -25px


.contacts-map
    width 50%


.contacts-info
    width 50%
    display flex
    flex-direction column
    justify-content flex-start

.contacts-info__wraper
    max-width 550px
    padding 90px 0px 115px 90px
    width 100%

.contacts-title
    font-size 36px
    color semiViolet
    font-family 'HelveticaNeue-Bold', sans-serif

.contacts-subtitle
    color semiPurple
    font-size 24px
    line-height 30px
    font-family 'HelveticaNeue-Roman', sans-serif
    margin-bottom 55px

    span
        display block


.contacts-list__item-text,
.contacts-list__item-text--link
    font-family 'HelveticaNeue-Bold', sans-serif
    font-size 24px
    color #3e3f40
    text-transform: none

.contacts-list__item-text--link
    transition all 0.8s ease
    &:hover
        color rgba(62, 63, 64, .5)
        text-decoration underline

.contacts-list__item-text
    display flex
    align-items center
    flex-direction column
        

.contacts-list__item
    position relative
    padding-left 180px
    height: 98px
    display flex
    box-sizing: border-box
    align-items center

    &:not(:last-child)
        margin-bottom 30px
    
    &:before
        display block
        content ''
        position absolute
        left 0% 
        top 0%
        background-repeat no-repeat
        background-position top center
        width 150px
        height 98px

    &:nth-child(1)
        &:before
            background-image url('../img/contacts/tel.png')
    
    &:nth-child(2)
        &:before
            background-image url('../img/contacts/email.png')

    &:nth-child(3)
        &:before
            background-image url('../img/contacts/location.png')

.requisites-wrap
    margin-top 60px

.requisites-title
    font-size 22px
    line-height 18px
    color semiPurple
    font-family 'HelveticaNeue-Bold', sans-serif
    margin-bottom 33px
    text-transform uppercase

.requisites-descr
    font-family 'HelveticaNeue-Light', sans-serif
    font-size 18px
    line-height 30px
    color semiBlack
    white-space pre-line
    margin-bottom 30px

.contacts-people__descr
    font-size 16px
    font-family 'HelveticaNeue-Bold', sans-serif
    color semiBlack
    line-height 30px
    text-transform none
    display block
    letter-spacing 0

    &:not(:last-child)
        margin-bottom 30px

.contacts-people__descr-position
    color semiPurple
    margin-right 10px


.contacts-people__descr-link
    display inline
    font-family 'HelveticaNeue-Light', sans-serif
    color #2d3484
    text-transform none
    letter-spacing: 0
    transition all 0.6s ease

    &:hover
        text-decoration underline
        color darkCerulean


