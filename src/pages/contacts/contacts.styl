.contacts-form__wrap
    display block
    position relative
    width 100%
    height 695px
    background url('../img/contacts/bg.jpg') center center no-repeat

    @media screen and (max-width 767px)
        height auto
        background-size cover

    &:before,
    &:after
        content: ''
        position absolute 
        top 0

    &:before
        background  url('../img/contacts/sota-left.png')
        left 0
        width 520px
        height 340px

        @media screen and (max-width 1280px)
            width 515px
            height 250px
            opacity 0.5
        
        @media screen and (max-width 767px)
            width 300px
            height 260px
            background-size cover
    
    &:after
        background  url('../img/contacts/sota-right.png')
        right 0
        width 600px
        height 350px
        z-index 0

        @media screen and (max-width 1280px)
            display none

.contacts-form 
    margin 100px auto
    max-width: 1280px
    display flex
    flex-direction: column
    z-index 100

    @media screen and (max-width 1280px)
        margin 60px auto
        padding 0 20px
        max-width inherit
.contacts-form__title
    color: #ffffff
    text-align center
    background-color: trasparent

    @media screen and (max-width 767px)
        font-size 22px
        line-height 22px
        letter-spacing 0.1px

.contacts-heading
    z-index: 10


    .separator
        svg
            margin 0 auto

        &:after
            background-color: #ffffff
            width: calc(50% - 20px);
            right: 0%

        &:before
            background-color: #ffffff
            width: calc(50% - 20px);
            left: 0%
            content: ''
            display: block
            height: 1px
            top 5px
            position: absolute


.contacts-form__input-wrap
    display flex

    @media screen and (max-width 767px)
        flex-direction column

.contacts-form__input-wrap__column
    &:first-of-type
        box-sizing: border-box
        margin-right: 40px
        display flex
        flex-direction: column
        width: 400px
        max-height: 300px
        height 100%

        @media screen and (max-width 1280px)
            width 50%

        @media screen and (max-width 767px)
            width 100%

    &:last-of-type
        max-width: 880px
        width: 100%
        flex 2 0 auto
        height: 300px

        @media screen and (max-width 1280px)
            width 50%
        
        @media screen and (max-width 767px)
            width 100%

        .contacts-form__label
            height 100%
            margin-bottom 0

.contacts-form__label
    font-family 'HelveticaNeue-Bold', sans-serif
    font-size 24px
    color: #ffffff
    line-height 36px
    display flex
    flex-direction: column
    margin-bottom 20px
    z-index: 10

    @media screen and (max-width 767px)
        font-size 16px

    &:last-of-type
        margin-bottom 0
    
    &:hover
        cursor pointer

    

.contacts-form__input
    box-sizing: border-box
    max-width: 400px
    height 50px
    width: 100%
    padding-left: 28px
    border: 1px solid #dbe0ea
    transition: .2s all ease-in-out
    background-color: #ffffff

    &:hover
        border: 2px solid semiViolet
        background-color: #ffffff
        cursor pointer
    
    @media screen and (max-width 1280px)
        max-width inherit
    
    @media screen and (max-width 767px)
        padding-left 20px

.contacts-form__input[placeholder]
    font-style: italic
    font-size: 14px
    font-family: 'HelveticaNeue-Light'
    color: #343537
    line-height: 2.571

    @media screen and (max-width 767px)
        font-size 12px

.contacts-form__input.textarea
    width 100%
    max-width: inherit
    height 100%
    z-index 10
    

.contacts-form__input.submit
    margin-top 20px
    align-self flex-end
    margin-left: auto
    max-width: 290px
    width 100%
    height 60px
    background-color: transparent
    color: #ffffff
    border: 2px solid #ffffff
    font-size 16px 
    font-family 'HelveticaNeue-Bold', sans-serif
    text-transform uppercase
    outline: none

    @media screen and (max-width 767px)
        font-size 12px
        line-height 12px
        height 40px
        margin-left 0
        max-width inherit

    &:hover
        background-color semiViolet
        transition all 0.5s ease-in-out
        color whiteColor
        border-color: semiViolet
