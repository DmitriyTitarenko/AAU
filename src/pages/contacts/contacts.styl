@import '../../common/common-stylus/vars'

.contacts
    display flex
    flex-direction column

    .tpc-slider.general-partners
        background-color #f0f2f4
        z-index 10
    

.contacts-wrap
    display flex
    margin-bottom -25px

    @media screen and (max-width 1280px)
        flex-direction column
        margin-bottom 0


.contacts-map
    width 50%

    @media screen and (max-width 1280px)
        width 100%
        height 500px

.contacts-info
    width 50%
    display flex
    flex-direction column
    justify-content flex-start
    box-sizing border-box
    
    @media screen and (max-width 1280px)
        width 100%
        padding 50px 40px


.contacts-info__wraper
    max-width 550px
    padding 90px 0px 115px 90px
    width 100%

    .contacts-heading
        .separator
            &:before,
            &:after
                background-color: rgb(0, 128, 198)

    @media screen and (max-width 1280px)
        max-width inherit
        margin 0 auto
        padding 0

.contacts-title
    font-size 36px
    color semiViolet
    font-family 'HelveticaNeue-Bold', sans-serif

    @media screen and (max-width: 767px)
        font-size 22px
        line-height 22px
        letter-spacing: 0.1px

.contacts-subtitle
    color semiPurple
    font-size 24px
    line-height 30px
    font-family 'HelveticaNeue-Roman', sans-serif
    margin-bottom 55px

    @media screen and (max-width: 767px)
        text-align center
        font-size 16px
        line-height 16px
        margin-bottom 25px

    span
        display block

.contacts-list__item
    @media screen and (max-width 767px)
        flex-direction column

.contacts-list__item-text,
.contacts-list__item-text--link
    font-family 'HelveticaNeue-Bold', sans-serif
    font-size 24px
    color #3e3f40
    text-transform: none

    @media screen and (max-width 767px)
        text-align center
        font-size 18px
        line-height 18px

.contacts-list__item-text--link
    transition all 0.8s ease
    &:hover
        color rgba(62, 63, 64, .5)
        text-decoration underline

.contacts-list__item-text
    display flex
    align-items center
    flex-direction column
        

.contacts-list__item
    position relative
    padding-left 180px
    height: 98px
    display flex
    box-sizing: border-box
    align-items center

    @media screen and (max-width 767px)
        padding-left 0
        height auto

    &:not(:last-child)
        margin-bottom 30px
    
    &:before
        display block
        content ''
        position absolute
        left 0% 
        top 0%
        background-repeat no-repeat
        background-position top center
        width 150px
        height 98px

        @media screen and (max-width 767px)
            width 56px
            height 50px
            min-height 50px
            margin 0 auto 10px
            position relative
            background-size cover
            background-position center

    &:nth-child(1)
        &:before
            background-image url('../img/contacts/tel.png')
            
            @media screen and (max-width 767px)
                background-image url('../img/contacts/tel-mob.png')
    &:nth-child(2)
        &:before
            background-image url('../img/contacts/email.png')
            
            @media screen and (max-width 767px)
                background-image url('../img/contacts/email-mob.png')

    &:nth-child(3)
        &:before
            background-image url('../img/contacts/location.png')

            @media screen and (max-width 767px)
                background-image url('../img/contacts/location-mob.png')


.requisites-wrap
    margin-top 60px

    @media screen and (max-width 767px)
        margin-top 35px
        text-align center

.requisites-title
    font-size 22px
    line-height 18px
    color semiPurple
    font-family 'HelveticaNeue-Bold', sans-serif
    margin-bottom 33px
    text-transform uppercase

    @media screen and (max-width 767px)
        margin-bottom 15px

.requisites-descr
    font-family 'HelveticaNeue-Light', sans-serif
    font-size 18px
    line-height 30px
    color semiBlack
    white-space pre-line
    margin-bottom 30px

    @media screen and (max-width 767px)
        font-size 14px
        line-height 24px

.contacts-people__descr
    font-size 16px
    font-family 'HelveticaNeue-Bold', sans-serif
    color semiBlack
    line-height 30px
    text-transform none
    display block
    letter-spacing 0

    &:not(:last-child)
        margin-bottom 30px

    @media screen and (max-width 767px)
        font-size 14px
        line-height 24px
        text-align: center

.contacts-people__descr-position
    color semiPurple
    margin-right 10px

    @media screen and (max-width 767px)
        display block
        text-align center
        width 100%
        margin-right 0


.contacts-people__descr-link
    display inline
    font-family 'HelveticaNeue-Light', sans-serif
    color #2d3484
    text-transform none
    letter-spacing: 0
    transition all 0.6s ease

    &:hover
        text-decoration underline
        color darkCerulean



