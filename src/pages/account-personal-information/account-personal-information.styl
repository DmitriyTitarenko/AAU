@import '../../common/common-stylus/vars'

.intro.account-user.two-section
    .header
        @media screen and (max-width 760px){
            left 0
            position absolute
        }

.change-password
    h2
        font-size 36px
        font-family 'Helvetica-Bold'
        text-transform uppercase
        color semiViolet
        line-height 36px

        @media screen and (max-width 1280px){
            width 100%
        }

        @media screen and (max-width 760px){
            font-size 24px
            font-weight bold
        }

.personal-info
    h2
        font-size 36px
        font-family 'Helvetica-Bold'
        text-transform uppercase
        color semiViolet
        line-height 36px

        @media screen and (max-width 1280px){
            width 100%
        }

        @media screen and (max-width 760px){
            font-size 24px
            font-weight bold
        }

.two-section,.intro,.account-user
    .info-wrap
        display flex
        flex-direction row

        @media screen and (max-width 1659px)
            flex-direction column

        .personal-info
            max-width 840px
            width 100%
        
            .info__descr
                max-width 600px
                width 100%
                font-size 18px
                line-height 30px
                letter-spacing 1.667
                color rgb(52, 53, 55)
                font-family 'HelveticaNeue-Roman'

                @media screen and (max-width 1280px){
                    text-align left
                }

                @media screen and (max-width 760px){
                    text-align center
                    max-width inherit
                    font-size 16px
                    line-height 24px
                }


.change-password
    max-width 430px
    width 100%
    margin-left 100px

.personal-info__form
    display flex
    flex-direction column


.personal-info__form-maininfo
    max-width 620px
    width 100%

.personal-info__block
    max-width 620px
    width 100%
    display flex

    p
        width 50%
        text-align left

    &:nth-of-type(2)
        margin-bottom 27px
    
    &:nth-of-type(3)
        margin-bottom 27px

.personal-info__user
    font-size 16px
    line-height 2
    color semiBlack
    font-family 'HelveticaNeue-Light'
    font-weight 600

.personal-info__label.row
    flex-direction row
    margin-bottom 0px

.license-wrap
    max-width inherit
    width 100%
    margin-bottom 50px

.license-title
    font-size 18px
    line-height 36px
    font-family 'HelveticaNeue-Bold'
    color semiPurple

    @media screen and (max-width 760px){
        font-size 16px
        line-height 20px
    }

.license-link
    color semiViolet
    font-family 'HelveticaNeue-Bold'
    font-size 18px
    line-height 36px

    @media screen and (max-width 760px){
        font-size 16px
        display inline-block
        width 100%
        line-height 16px
    }

.license-user
    font-size 18px
    line-height 36px
    font-family 'HelveticaNeue-Light'
    margin-left 25px

    @media screen and (max-width 760px){
        font-size 16px
        margin-left 0
        line-height 16px
    }


.change-password
    .change-password__descr
        max-width 350px
        width 100%

        @media screen and (max-width 1280px){
            max-width inherit
            text-align left
        }

        @media screen and (max-width 760px){
            text-align center
        }



.personal-info__form-password
    max-width 430px
    width 100%
    
    .personal-info__input
        max-width 420px
        width 100%
        box-sizing border-box

        @media screen and (max-width 1659px) {
            max-width 620px
        }

@media screen and (max-width 1659px) {
    .change-password__submit,
    .personal-info{
        max-width 620px
    }

    .personal-info__form-password{
        max-width 700px
    }

    .change-password{
        margin-left 0
        margin-top 90px
        max-width 700px
        margin-bottom 100px
    }


}

@media screen and (max-width 1280px) {
    .personal-info__form-maininfo,
    .personal-info__input,
    .personal-info__block,
    .personal-info__input.personal-current-password,
    .personal-info__input.personal-info__new-password,
    .personal-info__input.personal-info__confirm-password {
        max-width 700px
        width 100%
    } 

    //some style for input type submit in tablet
    .personal-info__form-submit {
        max-width 620px
        margin-left 40px
    }

    .info-wrap {
        align-items center
    }
}

@media screen and (max-width 760px){
    .personal-info__form-submit{
        margin-left 0
        max-width inherit
        font-size 16px
    }

    .change-password__submit{
        max-width inherit
        font-size 16px
    }

    #personal-info__email-user {
        width 70%
    }
}

@media screen and (max-width 320px){

    #personal-info__day{
        width 26%
    }
}