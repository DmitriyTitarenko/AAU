@import '../../common/common-stylus/vars'

.change-password
    h2
        font-size 36px
        font-family 'Helvetica-Bold'
        text-transform uppercase
        color semiViolet
        line-height 36px
        height 51px

.two-section,.intro,.account-user
    .info-wrap
        display flex
        flex-direction row

        .personal-info
            max-width 840px
            width 100%

            .info__descr
                max-width 600px
                width 100%
                font-size 18px
                line-height 30px
                letter-spacing 1.667
                color rgb(52, 53, 55)

        .change-password
            max-width 430px
            width 100%
            margin-left 100px


.personal-info__form
    display flex
    flex-direction column

.personal-info__form-maininfo
    max-width 620px
    width 100%

.personal-info__block
    max-width 620px
    width 100%
    display flex

    p
        width 50%
        text-align left

    &:nth-of-type(2)
        margin-bottom 27px
    
    &:nth-of-type(3)
        margin-bottom 27px

.personal-info__title
    font-size 18px
    color semiPurple
    line-height 2
    font-family 'HelveticaNeue-Bold'

.personal-info__user
    font-size 16px
    line-height 2
    color semiBlack
    font-family 'HelveticaNeue-Light'
    font-weight 600

.personal-info__label
    display flex
    flex-direction column
    margin-bottom 30px

    .personal-info__input__date
        width 200px
        
        &:not(:last-child)
            margin-right 10px

.personal-info__label.row
    flex-direction row
    margin-bottom 0px

.personal-info__input
    border 1px solid rgb(219, 224, 234)
    margin-top 16px
    height 60px
    width 590px
    padding-left 28px
    transition 0.2s all ease-in-out
    font-style normal

    &:focus
        border 2px solid semiPurple

    &:hover
        border 1px solid rgb(219, 224, 234)

.personal-info__form
    input[placeholder]
        font-style italic
        font-size 14px
        font-family 'HelveticaNeue-Light'
        color rgb(52, 53, 55)
        line-height: 2.571
        
    input[type=number]::-webkit-inner-spin-button, 
    input[type=number]::-webkit-outer-spin-button
        -webkit-appearance none
        -moz-appearance none
        -ms-appearance none
        -o-appearance none 
        appearance none
        margin 0

    input[type=number]
        -moz-appearance:textfield
        
    select:-moz-focusring 
        color transparent
        text-shadow 0 0 0 #000



.personal-info__select-wrap
    position relative
    margin-top 10px

    &:hover
        cursor pointer

    &:after
        position absolute
        content ''
        width 0
        height 0
        border-left 4px solid transparent
        border-right 4px solid transparent
        border-top 4px solid #343537
        top 50%
        right 28px

    .personal-info__select
        background-color #d4d4d5
        height 60px
        width 100%
        padding-left 30px
        border 1px solid rgb(219, 224, 234)
        -webkit-appearance button
        -moz-appearance button
        -webkit-user-select none
        -moz-user-select none
        outline 0
        font-style italic
        font-size 14px
        font-family 'HelveticaNeue-Light'
        color rgb(52, 53, 55)
        line-height: 2.571
        position relative

        &:focus
            border 1px solid rgb(219, 224, 234)

    .personal-info__select-item
        font-style normal
        font-size 14px
        font-family 'HelveticaNeue-Light'
        color rgb(52, 53, 55)
        line-height: 2.571

.personal-info__form-submit
    height 70px
    width 100%
    text-transform uppercase
    font-size 16px
    font-family 'HelveticaNeue-Bold'
    transition all 0.4s ease-in-out
    background-color whiteColor
    border 2px solid rgb(0, 128, 198)
    color rgb(0, 128, 198)

    &:hover
        background-color #5073b6
        border 2px solid #5073b6
        color whiteColor


.change-password
    .change-password__descr
        max-width 350px
        width 100%

.personal-info__form-password
    max-width 430px
    width 100%

    .personal-info__input
        width 390px
    


           

