@import '../../common/common-stylus/vars'
    
header 
    overflow hidden
    padding-left 290px

    @media screen and (max-width: lg) {
        padding-left 0px
    }
    
.controlpanel
    display flex
    justify-content space-between
    align-items center
    background-color #f0f2f4
    position fixed
    width 100%

    @media screen and (max-width: xl) {
        padding-left 30px
        flex-direction column
    }
    
    @media screen and (max-width: lg) {
        padding 0
    }

.controlpanel__left 
    display flex
    flex-direction column
    margin-left 130px
    
    @media screen and (max-width: xl) {
        order 2
        margin 10px 0 10px 225px
        width 100%
    }

    @media screen and (max-width: sm) {
        margin 0
        flex-direction row
    }

.controlpanel__left-textwrap
    position relative
    padding-left 24px

    &:before 
        content ''
        display block
        width 46px
        height 40px
        position absolute
        top 0%
        right 100%
        background-image url('../../img/account/user.png')

        @media screen and (max-width: sm) {
            top 15%
            left 10px
        }

    @media screen and (max-width: sm) {
        background whiteColor
        width 80%
        display flex
        flex-direction column
        justify-content center
        padding-left 70px
    }


.controlpanel__left-name 
    font-size 18px
    font-family 'HelveticaNeue-Bold'
    color semiBlack
    justify-content flex-end

    @media screen and (max-width: sm) {
        font-size 14px    
    }

.controlpanel__left-mail 
    font-size 14px
    font-family 'HelveticaNeue-Medium'
    color semiPurple

    @media screen and (max-width: sm) {
        font-size 13px    
    }

.controlpanel__right 
    display flex
    width 600px
    position relative
    right 265px

    @media screen and (max-width: xl) {
        order 1
        width 100%
        right 0
        height 70px
    }

.btn__violet
    background semiViolet
    width  310px
    height 70px
    transform skewX(30deg)
    transition all 0.4s ease-in-out
    display flex
    justify-content center

    &:hover
        background semiPurple

        .btn__semiViolet
            background semiViolet
    
    @media screen and (max-width: xl) {
        transform skewX(0deg)
        width  37%
        height 100%
    }

    @media screen and (max-width: sm) {
        width 50%    
    }

.btn__violet-link 
    display block
    margin 30px 63px    

    @media screen and (max-width: xl) {
        margin 0 23px
        display flex
        align-items center
        justify-content center
        text-align center
    }

    @media screen and (max-width: sm) {
        margin 0 14px
    }

    p
        font-family 'HelveticaNeue-Bold'
        font-size 14px
        color whiteColor
        letter-spacing 1.4px   
        padding 0
        transform skewX(-30deg)

        @media screen and (max-width: xl) {
        transform skewX(0deg)
       
        }
    
.btn__semiViolet
    background semiPurple 
    width  310px
    height 70px
    transform skewX(30deg)
    transition all 0.4s ease-in-out
    display flex
    justify-content center

    @media screen and (max-width: xl) {
        transform skewX(0deg)
        width 37%
        height 100%
    }

    @media screen and (max-width sm) {
        width 50%    
    }

    &:hover
        background semiViolet 
    
    .btn__semiViolet-link
        display block
    
        @media screen and (max-width: xl) {
            display flex
            align-items center
            justify-content center
            width 100%
        }

    p
        font-family 'HelveticaNeue-Bold'
        font-size 14px
        color whiteColor
        letter-spacing 1.4px
        margin 30px 43px
        padding 0
        transform skewX(-30deg)
        width 100%

        @media screen and (max-width: xl) {
            transform skewX(0deg)
            margin 0 15px
            text-align center
        }

main 
    display inline-block //it`s important for IE
    padding 133px 110px 0 375px

    @media screen and (max-width: xl) {
        margin-top 145px
        padding 0 35px 0 375px
    }

    @media screen and (max-width: lg) {
        padding 0 35px
    }

    @media screen and (max-width: sm) {
        padding 0 20px   
    }


.btn-account 
    font-size 14px
    letter-spacing 1.4px
    padding 17px 20px

.nav__wrap 
    margin-top 60px
    height 700px

    @media screen and (max-width: lg) {
        display flex
        justify-content center
    }

.nav__list-item 
    margin-bottom 5px

.nav__list
    max-width 240px
    margin-right 25px

.nav__list-item--link
    color whiteColor
    font-size 14px
    text-transform none
    font-family 'HelveticaNeue-Bold'
    letter-spacing 0.8px
    display flex
    align-items center

    .link-img 
        display block

    .link-img--hover 
        display none  

    &:hover 
        .link-img 
            display none
        
        .link-img--hover
            display block
    

    &:active 
        .link-img 
            display none
        
        .link-img--hover
            display block  

.nav__list-item--link---txt 
    margin-left 20px

.responsibility 
    margin-top 10px
    margin-bottom 20px
    width 100%

    @media screen and (max-width: lg) {
        margin 0
        font-size 12.5px
    }

    @media screen and (max-width: sm) {
        font-size 12px
    }

.developer 
    margin-top 30px
    display flex
    align-items center
    justify-content center
    margin-bottom 17px

    @media screen and (max-width: lg) {
        font-size 14px
    }
    
    img 
        margin-left 10px
        width 119px
        height 40px
        transition all 0.4s ease-in-out
        
        &:hover
            opacity 0.6

footer 
    display flex
    width 100%

// info

.info__title
    @media screen and (max-width: lg) {
        width 75%
    }

    @media screen and (max-width: sm) {
        width 100%
        text-align center
        font-size 30px
    }

.info__subtitle 
    @media screen and (max-width: sm) {
        text-align center
    }

.info__descr 
    text-align justify
    line-height 30px
    font-size 16px
    color semiBlack
    font-family HelveticaNeue-Light
    margin-bottom 40px

    &:nth-of-type(1)
        margin-top 40px


.menu__close
    display none

    @media screen and (max-width: lg) {
        padding 25px 67px
        display flex
        align-items center
        background semiViolet
        justify-content center  
        position fixed
        top 0%
    }

    @media screen and (max-width: sm) {
        display none
    }

    .menu__close-img 
        width 19px
        height 19px
        margin-right 33px
    
    .menu__close-txt 
        font-size 14px
        font-family 'Helvetica-Bold'
        letter-spacing 1.4px
        color whiteColor
        text-transform uppercase

        @media screen and (max-width: 319) {
            display none
        }

.menu__btn-wrap 
    
    @media screen and (max-width: sm) {
        display flex
        justify-content center
        align-items center
        margin-top 10px
    }

.menu__close-img--mob
    display none

    @media screen and (max-width: sm) {
        display block
        margin-right 20px
    }

.menu__logo-link--img 
    width 170px
    height 125px
    margin-top 70px

    @media screen and (max-width: xl) {
        margin-top 140px
    }


.menu__logo-link 
    margin-bottom 30px

    @media screen and (max-width: sm) {
        display none
    }


.separator 
    z-index -1

.menu-burger-mobile 
    display none

    @media screen and (max-width: sm) {
        display flex
        width 20%
        justify-content center
    }

    img 
        width 26px
        height 18px
        margin 21px auto


.menu-burger 
    display none

    p
        text-transform uppercase
        color semiPurple
        font-family 'Helvetica-Bold'
        letter-spacing 1.4px   
        font-size 14px
        width 150px
        margin 0 50px 0 25px

    img 
        width 26px
        height 18px
        

    @media screen and (max-width: lg) {
        display flex
        align-items center
        background whiteColor
        padding-left 57px
    }

    @media screen and (max-width: sm) {
        display none
    }
    
    &:hover
        cursor pointer

.overlay 
    display none
    top 0
    left 0
    background-color whiteColor
    opacity 0.8
    z-index 3
    position fixed
    width 100vw
    height 100vh
    overflow hidden

    @media screen and (max-width: 320) {
        display none
    }

