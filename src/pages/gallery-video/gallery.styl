@import '../../common/common-stylus/vars'

//-----------------------start geneeral styles ------------------------
.container
    flex-direction column

//-----------------------end general styles------------------------
.gallery-main
    .tpc-slider.general-partners
        background-color: #f0f2f4

    .container
        @media screen and (max-width 1280px)
            padding 60px 35px

        @media screen and (max-width 767px)
            padding 40px 25px
    
    .defaultTitle.partners-template, h1
        @media screen and (max-width 767px)
            font-size 22px


.gallery-list, .photo__list
    display flex
    flex-wrap: wrap
    justify-content: flex-start



.gallery-list__item
    width: 30%
    display flex
    flex-direction column
    margin-bottom 60px
    margin-right 60px


    &:nth-child(3n)
        margin-right 0

    @media screen and (max-width 1280px)
        width 46%
        margin-right 40px
        margin-bottom 40px

        &:nth-child(3n)
            margin-right 40px

        &:nth-child(2n)
            margin-right 0
        
        &:last-child
            margin-right auto
            margin-left 2em
   

    @media screen and (max-width 767px)
        width 100%
        margin 0 auto
        max-width 280px


        &:nth-child(3n)
            margin-right auto
        
        &:nth-child(2n)
            margin-right auto

.gallery-list__item-title
    font-family 'HelveticaNeue-Bold', sans-serif
    font-size 18px
    color semiViolet
    margin-bottom 20px

    @media screen and (max-width 767px)
        font-size 16px

.gallery-list__item-time
    font-family: 'HelveticaNeue-Bold', sans-serif
    font-size: 14px
    color: #fff
    line-height: 24px
    letter-spacing: .001em
    background: url('../img/all/date-blog.png') no-repeat
    position: relative
    margin-bottom: 20px
    padding-left: 22px

    &:after
        content: ''
        display: block
        height: 1px
        width: calc(100% - 110px)
        position: absolute
        top: 11px
        left: 110px
        background-color: #5073b6

.gallery-list__item-video
    border: 5px solid rgb(255, 255, 255)
    box-sizing: border-box
    max-width 380px
    width: 100%
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.25)
    display: flex
    align-items: center
    justify-content: center

    @media screen and (max-width 1280px)
        max-width inherit
        overflow: hidden

#pagingControls
    margin-top: 50px

    ul
        display flex
        align-items

        li, a
            font-family: 'HelveticaNeue-Bold', sans-serif
            font-size 18px
            line-height 24px
            color: semiPurple
            display flex
            align-items center
            justify-content center
        
        li
            position relative
            width 48px
            text-align center
            margin-right 15px

            &:hover
                cursor pointer

            &:before
                position absolute
                content: ''
                display block
                top: -9px
                left: 0%
                background url('../img/account/table-btn.png') center center no-repeat
                background-size: cover
                width 48px
                height 40px
                z-index -1

        .active
            color: whiteColor

            &:before
                background url('../img/account/table-btn-active.png') center center no-repeat
                z-index: -1

// photo gallery

.photo__list
    @media screen and (max-width 1600px)
        display flex
        justify-content: space-between
    
    @media screen and (max-width: 1000px)
        padding-right 40px
        padding-left 40px

    @media screen and (max-width 767px)
        padding-right 0px
        padding-left 0px

    li, .gallery-list__item
        display flex
        flex-direction column
        margin-bottom 60px
        max-width 290px
        margin-right 40px
        position relative
        justify-content: space-between

        @media screen and (max-width 1600px)
            margin-right 0px
            position inherit
        
        @media screen and (max-width 767px)
            max-width 280px
            min-width 280px
            margin 0 auto 40px

        

        &:nth-child(4n)
            margin-right 0px

            @media screen and (max-width 767px)
                margin-right auto

    p, .photo__list-item--title
        font-family 'HelveticaNeue-Bold', sans-serif
        font-size 18px
        color semiViolet
        min-height: 36px
        max-width 290px
        max-height: 36px
        margin-bottom: 20px
        overflow: hidden
        text-overflow: ellipsis
        display: -webkit-box
        -webkit-line-clamp: 2
        -webkit-box-orient: vertical


    span, .photo__list-item--time
        display block
        font-family: 'HelveticaNeue-Bold', sans-serif
        font-size: 14px
        color: #fff
        line-height: 24px
        letter-spacing: .001em
        background: url('../img/all/date-blog.png') no-repeat
        position: relative
        margin-bottom: 20px
        padding-left: 22px

        &:after
            content: ''
            display: block
            height: 1px
            width: calc(100% - 110px)
            position: absolute
            top: 11px
            left: 110px
            background-color: #5073b6

    .photo__slider-preview
        display flex
        min-height 290px
        max-height: 290px
        max-width: 290px
        min-width 290px
        background-repeat no-repeat
        background-size cover
        background-position center
        background-image url('../img/all/slider-img.jpg') // delete when gallery will be complete

        @media screen and (max-width 767px)
            min-width 280px
            max-width: 280px
            width 100%

        &:hover
            cursor pointer

    .photo__slider-content
        display none
    
    .photo__slider-wrap
        height 400px
        width 290px
        position absolute
        bottom auto
        left auto

        &:hover
            cursor pointer


.photo__slider-wrap.active
    background-image: none
    overflow-y: scroll
    height auto
    top 0%
    right 50%
    transform: translateX(50%)
    position fixed
    max-width 1060px
    width 100%
    margin-top 40px
    margin-bottom 40px
    z-index 110
    display block
    background-color whiteColor

    @media screen and (max-width 1600px)
        width calc(100% - 60px)
        position absolute

    @media screen and (max-width 767px)
        height inherit
        width calc(100% - 20px)
        max-height: 95vh
        min-height 95vh
        position: fixed

    .photo__slider-content
        display flex
        flex-direction column
        padding 70px
        position relative
        background-color: #ffffff

        @media screen and (max-width 1280px)
            padding 40px
        
        @media screen and (max-width 767px)
            padding 20px
        
        .photo__slider-close
            width 30px
            height 30px
            background-repeat no-repat
            background-position center
            background-size cover
            background-image url('../img/main/close.jpg')
            position absolute
            right 20px
            top 20px

            @media screen and (max-width 767px)
                width 20px
                height 20px

            &:hover
                cursor pointer

        h6, .slider__header-title
            font-family: 'HelveticaNeue-Bold', sans-serif
            font-size 30px
            line-height 24px
            color #2b3384
            margin-bottom 15px

            @media screen and (max-width 1280px)
                font-size 24px
            
            @media screen and (max-width 767px)
                margin-top 20px
                font-size 18px
                text-align center


        

    .slider__preview
        width 100%
        margin: 30px auto 1px;
        display block
        box-sizing border-box
        position relative
        min-height: 500px

        @media screen and (max-width 1280px)
            height 405px
            min-height 405px
            max-height 405px
            margin-top 0

        @media screen and (max-width 767px)
            height 100%
            min-height: inherit 
            max-height: inherit

        .slick-list.draggable
            height inherit
            width 100%

            .slick-track
                height inherit
                // min-width 100%

                .slider__preview-slide,
                .slider__nav-slide.slick-slide.slick-current.slick-active
                    position relative
                    box-sizing: border-box

                    img
                        margin 0 auto
                    
                
                
                 .slider__nav-slide.slick-active
                    min-width: 1px
                    min-height: 1px

                .slider__nav-slide.slick-slide.slick-current.slick-active
                    display: flex
                    justify-content: center
                    align-items: center
                    
                    img, .slider-img,
                    .slick-initialized.slick-slide.slick-slideimg
                        object-fit cover
                        vertical-align: middle
                        width 100%
                        
                        &:hover
                            cursor grab
                
        .slick-arrow
            position absolute
            top 50%
            transform translateY(-50%)
            width 15px
            height 25px
            z-index 10
        
        .prev.slick-arrow
            left -40px
            background-image: url('../img/all/prev-arrow.png')
            background-repeat: no-repeat
            background-size cover
            transition all 0.2s ease

            @media screen and (max-width 1280px)
                left -30px
            
            @media screen and (max-width 767px)
                left -18px

            &:hover
                opacity 0.4
        
        .next.slick-arrow
            right -40px
            background-image: url('../img/all/next-arrow.png')
            background-repeat: no-repeat
            background-size cover
            transition all 0.2s ease

            @media screen and (max-width 1280px)
                right -30px

            @media screen and (max-width 767px)
                right -18px

            &:hover
                opacity 0.4

    .slider__nav
        display none
        margin-top 20px
        width 100%
        box-sizing border-box

        @media screen and (max-width 767px)
            display none

        .slick-track
            width 100%
            transform: translate3d(0,0,0) !important
    
        .slider__nav-slide.slick-slide
            min-width 100px !important
            max-width: 100px !important
            margin-right 10px
            margin-bottom: 10px
            min-height: 100px !important
            display block

            &:last-child
                margin-right 0

            img
                margin 0 auto
                height: 100%
                object-fit cover

.photo__slider-wrap.js-popup.active
    .slider__nav
        display flex
        flex-wrap wrap

        .slick-list.draggable
            height auto !important

            .slick-track
                height auto !important
.photo__slider-wrap.js-popup.active
    .slider__preview-slide.slick-slide.slick-current.slick-active
        margin 0 auto



.slider__preview .slick-next.slick-arrow.prev
    left -30px
    background-image: url('../img/all/prev-arrow.png')

.slider__preview .slick-prev.slick-arrow
    right -30px

.overlay-main.active
    display block

.photo__slider-wrap.active
    .photo__slider-content
        .photo__list-item--time
            @media screen and (max-width 767px)
                margin 0 auto 20px
                text-align center
                background-position center
                padding-left 0
                z-index 10
                
                &:after
                    @media screen and (max-width 767px)
                        z-index -1
                        width 100%
                        left 0

@media screen and (max-width 767px)
    .slick-slide
        min-width: inherit
    
    .slick-slide img
        width: 100%
        height: 100%
        object-fit: cover
    

.photo__slider-wrap.active
    .slider__preview.slick-initialized .slick-slide
        display block
        filter alpha (opacity = 40 )
        opacity 0
        transition all 0.3s ease-out
    
    .slider__preview.slick-initialized .slick-center
        display block
        filter alpha (opacity = 100 )
        opacity 1
        transition all 0.3s ease-out

.photo__slider-wrap.js-popup.active .slider__nav
    @media screen and (max-width 767px)
        display none

.photo__list-item
    @media screen and (max-width 1024px)
        margin-right: auto
        margin-left 3em
    

.photo__list
    @media screen and (max-width 1024px)
        justify-content center
    
    @media screen and (max-width 1000px)
        justify-content space-between