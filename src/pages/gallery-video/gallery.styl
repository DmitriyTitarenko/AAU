@import '../../common/common-stylus/vars'

//-----------------------start geneeral styles ------------------------
.container
    flex-direction column

//-----------------------end general styles------------------------

.tpc-slider.general-partners
    background-color: #f0f2f4

.gallery-list
    display flex
    flex-wrap: wrap
    justify-content: space-between


.gallery-list__item
    width: 30%
    display flex
    flex-direction column
    margin-bottom 60px

    &:last-of-type
        margin-bottom 0

    &:nth-last-child(2),
    &:nth-last-child(3)
        margin-bottom 0

    // &:nth-child(2n+1)
    //     margin-top 60px

.gallery-list__item-title
    font-family 'HelveticaNeue-Bold', sans-serif
    font-size 18px
    color semiViolet
    margin-bottom 20px

.gallery-list__item-time
    font-family: 'HelveticaNeue-Bold', sans-serif
    font-size: 14px
    color: #fff
    line-height: 24px
    letter-spacing: .001em
    background: url(../../img/all/date-blog.png) no-repeat
    position: relative
    margin-bottom: 20px
    padding-left: 22px

    &:after
        content: ''
        display: block
        height: 1px
        width: calc(100% - 110px)
        position: absolute
        top: 11px
        left: 110px
        background-color: #5073b6

.gallery-list__item-video
    border: 5px solid rgb(255, 255, 255)
    box-sizing: border-box
    max-width 380px
    width: 100%
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.25)
    display: flex
    align-items: center
    justify-content: center

#pagingControls
    margin-top: 50px

    ul
        display flex
        align-items

        li, a
            font-family: 'HelveticaNeue-Bold', sans-serif
            font-size 18px
            line-height 24px
            color: semiPurple
            display flex
            align-items center
            justify-content center
        
        li
            position relative
            width 48px
            text-align center
            margin-right 15px

            &:hover
                cursor pointer

            &:before
                position absolute
                content: ''
                display block
                top: -9px
                left: 0%
                background url('../img/account/table-btn.png') center center no-repeat
                background-size: cover
                width 48px
                height 40px
                z-index -1

        .active
            color: whiteColor

            &:before
                background url('../img/account/table-btn-active.png') center center no-repeat
                z-index: -1