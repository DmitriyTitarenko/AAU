@import '../../common/common-stylus/vars'


.intro__subtitle
    margin-bottom: 55px

.board__members-list
    flex-wrap wrap
    justify-content flex-start

    .board__members-list--item 
        margin-right 40px
        margin-top 40px
        width 400px
        
        @media screen and (max-width: 1280px){
            margin-right: 30px
        }

        @media screen and (max-width: 920px){
            width 330px
            height 430px       
        }

        &:nth-of-type(3n)
            margin-right 0

            @media screen and (max-width: 1280px){
                margin-right 30px
            }
        
        &:nth-of-type(2n)
            @media screen and (max-width: 1280px){
                margin-right 0
            }

        .worker__img
            width 400px
            
            @media screen and (max-width: 920px){
                width 330px
                height 330px
                }

        .worker__text-wrap
            display flex
            flex-direction column
            justify-content center
            align-items center
            height 100px

            .worker__text
                margin 0

        .worker__img-wrap
            height 400px

            @media screen and (max-width: 920px){
                height 330px
            }

.worker__text_secondname
    display block

.competence-board, .general-partners
    background-color semiGray

.competence-board__list-item
    .competence-board__list-item--text
        margin-bottom 10px