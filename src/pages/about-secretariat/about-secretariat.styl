@import '../../common/common-stylus/vars'

.secretariat
    .worker-card-group
        .worker__text_secondname
            text-transform uppercase
            font-size 18px
            font-weight 500
            font-family 'HelveticaNeue-Black'
            margin-bottom 10px
        
        .worker__text
            font-size 14px
            font-weight 400
            font-family 'HelveticaNeue-Medium'

#sitemaps
    display flex
    justify-content center

#breadcrumbs li 
  display: inline-block

#breadcrumbs li:not(:first-child) 
  margin-left: 0.4em

#breadcrumbs li:not(:first-child):before 
  content: '>'
  margin-right: 0.4em
