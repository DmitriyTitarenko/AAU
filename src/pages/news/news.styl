@import '../../common/common-stylus/vars'

//-----------------------start geneeral styles ------------------------
.news__maincontent,
.news__subscribe
    .container
        flex-direction column
        padding 100px 0


        @media screen and (max-width 1280px)
            padding 60px 20px
        
        @media screen and (max-width 767px)
            padding 40px 20px

.news-aau__post-container
    padding 60px 0

    @media screen and (max-width 1280px)
        padding 60px 20px
    
    @media screen and (max-width 767px)
            padding 40px 20px

.news__maincontent
    .news__maincontent-container,
    .container
        padding 60px 0

        @media screen and (max-width 1280px)
            padding 60px 20px
        
        @media screen and (max-width 767px)
            padding 40px 20px
//-----------------------end general styles------------------------
.news__subscribe
    position relative
    display flex
    flex-direction: column
    position relative
    width 100%
    height 450px
    background-image url('../img/contacts/bg.jpg') 
    background-size cover
    background-repeat-x repeat
    background-repeat-y no-repeat

    @media screen and (max-width 767px)
        height auto

    &:before,
    &:after
        content: ''
        position absolute 
        top 0

    &:before
        background  url('../img/contacts/sota-left.png')
        left 0
        width 520px
        height 340px

        @media screen and (max-width 1280px)
            display: none
    
    &:after
        background  url('../img/contacts/sota-right.png')
        right 0
        width 600px
        height 350px

        @media screen and (max-width 1280px)
            display none

    &-form
        box-sizing border-box
        margin 0 auto
        max-height 70px
        display flex
        max-width 725px
        width 100%
        align-items flex-start

        @media screen and (max-width 767px)
            flex-direction column
            max-height: inherit
            max-width inherit

            input
                max-width inherit
                width 100%
                height 40px
                min-height: 40px


.news__subscribe-heading
    .separator
        margin-bottom: 60px

.news__subscribe-form--input.typical-input
    margin-top 0px
    height 70px

    &:hover,
    &:active,
    &:focus
        background-color: whiteColor

    @media screen and (max-width 767px)
        margin-bottom: 10px
        max-width: inherit
        width 100%
        min-height: 40px
        height 40px
// .news__maincontent-title


.news__maincontent-list__item
    display flex

    @media screen and (max-width 1280px)
        flex-direction column

        &:not(:last-child)
            margin-bottom: 50px

    &-img--wrap
        display block
        min-width 440px
        max-width 400px
        width 100%
        margin-right 40px
        margin-bottom 60px

        @media screen and (max-width 1280px)
            margin-right: auto
            margin-left auto
            margin-bottom: 20px
        
        @media screen and (max-width 767px)
            min-width inherit
            max-width: inherit

    &-img
        width 100%
        height 100%
        object-fit cover

.news__maincontent-list__item-info
    display flex
    flex-direction column
    &--title
        font-family 'HelveticaNeue-Bold', sans-serif
        font-size 18px
        line-height 24px
        color semiViolet
        margin-bottom 20px

    &--descr
        font-family 'HelveticaNeue-Light', sans-serif
        font-size 14px
        line-height 24px
        color semiBlack
        letter-spacing: .25px
    
    &--more
        margin-top 30px

.news-aau__post-title
    text-transform none
    font-size 36px
    line-height 36px
    color semiViolet
    margin-bottom 30px

    @media screen and (max-width 1280px)
        font-size 24px
        line-height: 24px
    
    @media screen and (max-width 767px)
        font-size 18px
        line-height: 18px
        margin-bottom: 20px

.news__maincontent-list__item-info--more.blog-entry__more
    @media screen and (max-width 320px)
        justify-content: flex-end
