@import '../../common/common-stylus/vars'

//-----------------------start geneeral styles ------------------------
.news__maincontent,
.news__subscribe
    .container
        flex-direction column
        padding 100px 0


        @media screen and (max-width 1280px)
            padding 60px 0
        
        @media screen and (max-width 720px)
            padding 20px 0

.news-aau__post-container
    padding 60px 0

.news__maincontent
    .news__maincontent-container,
    .container
        padding 60px 0
//-----------------------end general styles------------------------
.news__subscribe
    position relative
    display flex
    flex-direction: column
    position relative
    width 100%
    height 450px
    background-image url('../img/contacts/bg.jpg') 
    background-size cover
    background-repeat-x repeat
    background-repeat-y no-repeat

    &:before,
    &:after
        content: ''
        position absolute 
        top 0

    &:before
        background  url('../img/contacts/sota-left.png')
        left 0
        width 520px
        height 340px
    
    &:after
        background  url('../img/contacts/sota-right.png')
        right 0
        width 600px
        height 350px

    &-form
        box-sizing border-box
        margin 0 auto
        max-height 70px
        display flex
        max-width 725px
        width 100%
        align-items flex-start

.news__subscribe-heading
    .separator
        margin-bottom: 60px

.news__subscribe-form--input.typical-input
    margin-top 0px
    height 70px

    &:hover,
    &:active,
    &:focus
        background-color: whiteColor


// .news__maincontent-title

.news__maincontent-list__item
    display flex

    &-img--wrap
        display block
        min-width 440px
        max-width 400px
        width 100%
        margin-right 40px
        margin-bottom 60px

    &-img
        width 100%
        height 100%
        object-fit cover

.news__maincontent-list__item-info
    display flex
    flex-direction column
    &--title
        font-family 'HelveticaNeue-Bold', sans-serif
        font-size 18px
        line-height 24px
        color semiViolet
        margin-bottom 20px

    &--descr
        font-family 'HelveticaNeue-Light', sans-serif
        font-size 14px
        line-height 24px
        color semiBlack
        letter-spacing: .25px
    
    &--more
        margin-top 30px

.news-aau__post-title
    text-transform none
    font-size 36px
    line-height 36px
    color semiViolet
    margin-bottom 30px

