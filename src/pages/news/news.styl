.news-aau__post-info
    display flex
    margin-top 50px

    @media screen and (max-width 1280px)
        flex-direction: column
    
    @media screen and (max-width 767px)
        margin-top: 20px

    &--img-wrap
        max-width 550px
        width 100%
        height 275px
        margin-right 80px

        @media screen and (max-width 1280px)
            margin-right: auto
            margin-left: auto
            margin-bottom: 40px
        
        @media screen and (max-width 767px)
            max-width: inherit
            height auto

    &--img
        width auto
        height 100%
        object-fit cover

    &--descr-text
        font-family 'HelveticaNeue-Light', sans-serif
        font-size 14px
        line-height 24px
        color semiBlack
        text-align justify
        margin-bottom 30px

        &--link
            font-size 14px
            line-height 24px
            color #2d3484
            text-decoration underline
            text-transform none
            letter-spacing 0

.news-aau__post-info--descr-text.bold
    font-family 'HelveticaNeue-Medium', sans-serif
    margin-bottom 10px

.descr-list
    list-style disc
    padding-left 15px
    margin-bottom 20px

    .descr-list__item
        color: #0080c6

        .news-aau__post-info--descr-text
            margin-bottom 0

.news-aau__post-info--descr-text-place
    color semiPurple
    font-size 14px
    font-family 'HelveticaNeue-Bold', sans-serif
    line-height 24px
    margin-bottom 0px

    &:last-of-type
        margin 20px
    


