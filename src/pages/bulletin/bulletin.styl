@import '../../common/common-stylus/vars'

//-----------------------start geneeral styles ------------------------
.container
    flex-direction column

//-----------------------end general styles------------------------
.tpc-slider.general-partners
    background-color: #f0f2f4

.bulletin__subtitle
    font-size 24px
    line-height 30px
    font-family 'HelveticaNeue-Roman', sans-serif
    color semiPurple
    text-transform none

.bulettin__subtitle-descr
    font-family 'HelveticaNeue-Roman', sans-serif
    font-size 18px
    line-height 30px
    color #3e3f40
    margin-bottom 50px

.bulletin__linklist
    border-bottom: 5px solid semiPurple
    width 100%
    display flex
    margin-bottom: 60px

.bulletin__linklist-item
    width 180px
    height 50px
    display flex
    justify-content center
    align-items center
    text-align center
    background-color rgb(240, 242, 244)
    margin-right 2px
    margin-left 2px

    &:first-child
        margin-left 0px

    &:last-child
        margin-right 0px

.bulletin__linklist-item.active
    background-image: url('../img/all/litle-bg.jpg')
    position relative

    &:before
        content: ''
        position absolute
        top 0%
        left: 0%
        background-image: url('../img//all/sota-left.png')
        background-repeat: no-repeat
        width 107px
        height 50px
        background-size: cover
        background-position-x: -5px
        background-position-y: bottom

    .bulletin__linklist-item--link
        color whiteColor
        text-transform uppercase

.bulletin__linklist-item--link
    text-transform none
    font-family 'HelveticaNeue-Bold', sans-serif
    font-size 18px
    color semiPurple
    z-index 5
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center

.bulletin-list
    display flex
    flex-wrap: wrap
    justify-content space-between

.bulletin-list__item
    width: 22,65%
    display flex
    flex-direction: column
    margin-bottom 45px
    max-width: 290px
    max-height 460px
    height 100%


.bulletin-list__item-btngroup
    display flex

.bulletin-list__item-img
    max-height: 410px
    height 100%
    max-width: 290px
    width 100%
    object-fit: cover

.bulletin-list__item-link
    display flex
    justify-content center
    align-items center
    text-transform uppercase
    height 50px
    width 50%
    font-size 12px
    font-family 'Helvetica-Bold', sans-serif

.bulletin-list__item-link.withbg
    color: whiteColor
    background-color semiPurple
    border: 2px solid semiPurple

    &:hover
        background-color: #2d3484
        color whiteColor
        border 2px solid #2d3484

.bulletin-list__item-link.withoutbg
    color semiPurple
    background-color whiteColor
    border: 2px solid semiPurple

    &:hover
        background-color: #2d3484
        color whiteColor
        border 2px solid #2d3484

// paging



.bulletin__mainsubtitle
    font-size: 36px
    font-family: 'Helvetica-Bold', sans-serif
    text-transform: uppercase
    color: #2b3384

.bulletin-text
    font-family 'HelveticaNeue-Light', sans-serif
    font-size 16px
    line-height 30px
    color semiBlack

    &:not(:last-child)
        margin-bottom 30px

.bulletin__checklist-title
    font-size 24px
    font-family: 'Helvetica-Bold', sans-serif
    color semiViolet
    text-transform uppercase

.bulletin__checklist
    display flex
    flex-wrap wrap
    justify-content space-between

.bulletin__checklist-item
    max-width 550px
    width 100%
    white-space: pre-line
    margin-bottom 20px

    &:nth-last-child(2),
    &:last-child
        margin-bottom 0
    
.checklist-item.bulletin__checklist-item
    &:before
        transform: translateY(0%)

.bulletin__btn-terms.btn-template
    margin-top 55px
    background-color: semiPurple
    max-width: 400px
    height 60px
    color: whiteColor
    font-family 'Helvetica-Bold', sans-serif
    font-size 14px
    letter-spacing 0

.bulletin__table
    width 100%
    height 100%
    box-sizing: border-box

.bulletin__t-head-row--title
    background-image: url('../img/all/litle-bg.jpg')
    background-repeat: no-repeat
    background-size: cover
    position relative
    height 60px
    width 250px
    text-transform: uppercase
    font-size: 18px
    font-family: 'HelveticaNeue-Bold',sans-serif
    color: #fff
    letter-spacing: .9px
    vertical-align: middle
    text-align: center
    border-right: 5px solid #fff
    border-bottom: 5px solid #fff
    white-space: pre-line

    &:last-of-type
        width: 760px
        border-right: 0px

    &:before
        content: ''
        position absolute
        top 0%
        left: 0%
        background-image: url('../img//all/sota-left.png')
        background-repeat: no-repeat
        width 107px
        height 50px
        background-size: cover
        background-position-x: -5px
        background-position-y: bottom

.bulletin__table-number,
.bulletin__table-deadline,
.bulletin__table-subject
    background-color: #f0f2f4
    vertical-align: middle
    text-align center
    font-family: 'HelveticaNeue-Roman',sans-serif
    font-size: 16px
    color: #343537
    box-sizing: border-box
    border-right: 5px solid #fff
    border-bottom: 5px solid #fff
    width: 250px
    height: 60px

.bulletin__t-body-row
    .bulletin__table-subject
        border-right: 0px