@import '../../common/common-stylus/vars'

//-----------------------start geneeral styles ------------------------
.container
    flex-direction column

//-----------------------end general styles------------------------
.tpc-slider.general-partners
    background-color: #f0f2f4

.bulletin__subtitle
    font-size 24px
    line-height 30px
    font-family 'HelveticaNeue-Roman', sans-serif
    color semiPurple
    text-transform none

    @media screen and (max-width 1280px)
        font-size 20px
    
    @media screen and (max-width 767px)
        font-size 16px
        line-height 24px
        margin-bottom 20px

.bulettin__subtitle-descr
    font-family 'HelveticaNeue-Roman', sans-serif
    font-size 18px
    line-height 30px
    color #3e3f40
    margin-bottom 50px


.bulletin-list
    display flex
    flex-wrap: wrap
    justify-content space-between

    @media screen and (max-width 610px)
        justify-content: center
    
    &:after
        content: ""
        flex: auto
        
        @media screen and (max-width: 600px)
            display none

.bulletin-list__item
    display flex
    flex-direction: column
    margin-bottom 45px
    max-width: 290px
    min-height: 460px
    min-width 290px
    max-height 460px
    height 100%

    @media screen and (max-width 610px)
        width 100%
    
    &:last-child
        margin-left 2.5em

        @media screen and (max-width 1280px)
            margin-left 1em


.bulletin-list__item-btngroup
    display flex
    min-height: 55px
    height 55px


.bulletin-list__item-img
    max-height: 410px
    height 100%
    max-width: 290px
    width 100%
    object-fit: cover

.bulletin-list__item-link
    display flex
    justify-content center
    align-items center
    text-transform uppercase
    height 50px
    width 50%
    font-size 12px
    font-family 'Helvetica-Bold', sans-serif

.bulletin-list__item-link.withbg
    color: whiteColor
    background-color semiPurple
    border: 2px solid semiPurple

    &:hover
        background-color: #2d3484
        color whiteColor
        border 2px solid #2d3484

.bulletin-list__item-link.withoutbg
    color semiPurple
    background-color whiteColor
    border: 2px solid semiPurple

    &:hover
        background-color: #2d3484
        color whiteColor
        border 2px solid #2d3484

// paging

.bulletin-template
    @media screen and (max-width 1280px)
        text-align left
    
    @media screen and (max-width 767px)
        text-align center

.bulletin__mainsubtitle
    font-size: 36px
    font-family: 'Helvetica-Bold', sans-serif
    text-transform: uppercase
    color: #2b3384

    @media screen and (max-width 1280px)
        font-size 30px

.bulletin-text
    font-family 'HelveticaNeue-Light', sans-serif
    font-size 16px
    line-height 30px
    color semiBlack

    &:not(:last-child)
        margin-bottom 30px
    
    ul, ol
        padding-left: 20px

.bulletin__checklist-title
    font-size 24px
    font-family: 'Helvetica-Bold', sans-serif
    color semiViolet
    text-transform uppercase

.bulletin__checklist
    display flex
    flex-wrap wrap
    justify-content space-between

.bulletin__checklist-item
    max-width 550px
    width 100%
    white-space: pre-line
    margin-bottom 20px

    &:nth-last-child(2),
    &:last-child
        margin-bottom 0

    @media screen and (max-width 767px)
        &:nth-last-child(2),
        &:last-child
            margin-bottom 20px
    
.checklist-item.bulletin__checklist-item
    &:before
        transform: translateY(0%)

.bulletin__btn-terms.btn-template
    margin-top 55px
    background-color: semiPurple
    max-width: 400px
    height 60px
    color: whiteColor
    font-family 'Helvetica-Bold', sans-serif
    font-size 14px
    letter-spacing 0

    @media screen and (max-width 767px)
        margin-top 20px

.bulletin__table
    width 100%
    height 100%
    box-sizing: border-box

.bulletin__t-head-row--title
    background-image: url('../img/all/litle-bg.jpg')
    background-repeat: no-repeat
    background-size: cover
    position relative
    height 60px
    width 250px
    text-transform: uppercase
    font-size: 18px
    font-family: 'HelveticaNeue-Bold',sans-serif
    color: #fff
    letter-spacing: .9px
    vertical-align: middle
    text-align: center
    border-right: 5px solid #fff
    border-bottom: 5px solid #fff
    white-space: pre-line

    @media screen and (max-width 1280px)
        &:nth-of-type(2)
            min-width 250px
    
    @media screen and (max-width 767px)
        height 100px
        font-size 10px
        padding-right 5px
        padding-left 5px

        &:nth-of-type(1)
            width 20%

        &:nth-of-type(2)
            min-width 1px
            width 30%

        
        &:nth-of-type(3)
            width 50%


    &:last-of-type
        width: 760px
        border-right: 0px

    &:before
        content: ''
        position absolute
        top 0%
        left: 0%
        background-image: url('../img//all/sota-left.png')
        background-repeat: no-repeat
        width 107px
        height 50px
        background-size: cover
        background-position-x: -5px
        background-position-y: bottom

        @media screen and (max-width 767px)
            opacity: 0.6

.bulletin__table-number,
.bulletin__table-deadline,
.bulletin__table-subject
    background-color: #f0f2f4
    vertical-align: middle
    text-align center
    font-family: 'HelveticaNeue-Roman',sans-serif
    font-size: 16px
    color: #343537
    box-sizing: border-box
    border-right: 5px solid #fff
    border-bottom: 5px solid #fff
    width: 250px
    height: 60px

.bulletin__t-body-row
    .bulletin__table-subject
        border-right: 0px