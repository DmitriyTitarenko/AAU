@import '../../common/common-stylus/vars'

//-----------------------start geneeral styles ------------------------
.container
    flex-direction column

.tpc-slider.general-partners
    background-color: #f0f2f4
//-----------------------end general styles------------------------

.project-main
    .project-title
        white-space: pre-line

.section-projects__info
    display flex
    justify-content: space-between
    
    &-column
        max-width: 67%
    
.projects__info-column--title
    color: lightViolet
    font-size 22px
    line-height 26px
    letter-spacing 0.1em
    font-family 'HelveticaNeue-Roman', sans-serif
    text-transform: none

.section-projects__info-column.partners
    max-width: 320px
    width 100%

.projects__info-column--video
    margin-bottom: 60px
    margin-top: 60px
    border: 5px solid #fff
    box-sizing: border-box
    width: 100%
    box-shadow: 0 0 20px 0 rgb(0,0,0)
    height 490px

// start style block project-partners
.section-projects__partners
    &:first-of-type
        margin-bottom: 80px

    &--img_wrap
        align-items: center
        border: 1px dotted #ccc
        background-color: #fff
        display flex
        justify-content center
        width 100%
        height 190px
        
    &--img
        max-width 80%
        max-height 80%
        object-fit: cover

.section-projects__partners-subtitle
    font-size 22px
    font-family 'HelveticaNeue-Bold', sans-serif
    color semiViolet

    .separator
        margin 5px 0 30px 0

.section-projects__partners-btn
    margin-top 30px
    height 70px
    width 100%
    color whiteColor

.section-projects__info-column
    .projects-list__wrap
        margin-bottom: 40px
        padding-left 55px
        position relative

.projects-list__title
    position relative

    &:before
        content: ''
        display: block
        top: 0%
        left: -60px
        position: absolute
        background-repeat: no-repeat
        background-size: cover
        width 46px
        height 40px

    &:nth-child(1):before
        background-image: url('../img/projects/step-1.png')
        
    &:nth-child(2):before
        background-image: url('../img/projects/step-2.png')

    &:nth-child(3):before
        background-image: url('../img/projects/step-3.png')

.projects-list__title
    font-size 16px
    line-height 18px
    color semiPurple
    font-family 'HelveticaNeue-Bold', sans-serif
    text-transform uppercase

.projects-list__subtitle, .projects-mainlist__item-text
    font-size 16px
    line-height 30px
    color semiBlack

.projects-list__subtitle
    font-family 'HelveticaNeue-Medium', sans-serif

.projects-mainlist__item-text
    font-family 'HelveticaNeue-Light', sans-serif

.projects-mainlist
    margin-bottom: 20px
    list-style-type: disc
    padding-left: 10px
    margin-left 20px

.projects-mainlist__item
    color: #0080c6

.projects-contactslist__item-text
    font-family 'HelveticaNeue-Light', sans-serif
    font-size 16px
    line-height 24px
    color semiBlack
    text-transform none

.projects-contactslist__item:nth-child(1)
    .projects-contactslist__item-text:nth-child(1)
        margin-right: 20px

.projects-contactslist__item:nth-child(2)
    .projects-contactslist__item-text:nth-child(1)
        margin-right: 32px
    

.project__btn-info
    color semiPurple
    font-size 18px
    line-height 36px
    font-family 'HelveticaNeue-Bold', sans-serif

.project__btn-price
    margin-left 30px
    color semiBlack
    font-family 'HelveticaNeue-Black', sans-serif

.project__btn-group
    display flex
    justify-content space-between
    margin-top: 45px

.project__btn-link
    text-transform uppercase
    height 60px
    max-width 400px
    width 100%

    &:hover
        cursor pointer

.defaultTitle.popup-title.projects--popup-title
    line-height 36px
    font-size 22px
    font-family 'HelveticaNeue-Bold', sans-serif
    color semiViolet
    text-transform uppercase
    text-align center

    span
        display block
        font-size 30px


.popup__attorney
    .projects--popup-title__wrap
        svg
            margin:  0 auto
    
    .projects-popup-subtitle
        font-family 'HelveticaNeue-Roman', sans-serif
        font-size 18px
        line-height 30px
        color semiPurple
        text-align center
        padding-right: 5px
        padding-left: 5px
        margin-bottom 30px
    
    .projects-popup-descr
        font-family 'Helvetica-Regular', sans-serif
        padding-right: 5px;
        padding-left: 5px;
        color: #010101
        text-align center
        margin-bottom 30px

    .popup-btn__group
        display flex
        justify-content: center
        
        .btn-template
            height 55px
            max-width: 230px
            width 100%
            font-size 14px

            &:first-of-type
                margin-right: 40px
