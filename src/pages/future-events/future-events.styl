@import '../../common/common-stylus/vars'

.events__content
    .container
        flex-direction column

    #pagingControls
        margin-top 100px

.events-pages__list
    border-bottom: 5px solid semiPurple
    width 100%
    display flex
    margin-bottom: 60px

    &-item
        width 180px
        height 50px
        display flex
        justify-content center
        align-items center
        text-align center
        background-color rgb(240, 242, 244)
        margin-right 2px
        margin-left 2px

        &:first-child
            margin-left 0px

        &:last-child
            margin-right 0px
            
.events-pages__list-item--link
    text-transform none
    font-family 'HelveticaNeue-Bold', sans-serif
    font-size 18px
    color semiPurple
    z-index 5
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center

.events-pages__list-item.active
    background-image: url('../img/all/litle-bg.jpg')
    position relative
    
    &:before
        content: ''
        position absolute
        top 0%
        left: 0%
        background-image: url('../img//all/sota-left.png')
        background-repeat: no-repeat
        width 107px
        height 50px
        background-size: cover
        background-position-x: -5px
        background-position-y: bottom
    
    .events-pages__list-item--link
        color whiteColor
        text-transform uppercase
    

.events-mainlist
    display flex
    flex-wrap wrap

.events-mainlist__item
    max-width 400px
    width 100%
    margin-bottom 60px
    margin-right 40px

    &:nth-of-type(3n)
        margin-right 0
    
    &:nth-last-child(2),
    &:nth-last-child(3),
    &:last-child
        margin-bottom 0
    

    &-imgwrap
        max-width 400px
        max-height 300px
        width 100%
        height 100%
        margin-bottom 30px

    &-img
        width 100%
        height 100%
        object-fit cover
    
    &-titlewrap
        max-height 115px
        height 100%
        display flex
        flex-direction column
        justify-content space-between
        overflow hidden

    &-title
        font-size 18px
        line-height 24px
        font-family 'HelveticaNeue-Bold', sans-serif
        color semiViolet
        // margin-bottom 40px

    .blog-entry__date
        margin-bottom 5px
    
    &-category
        font-size 14px
        line-height 24px
        font-family 'HelveticaNeue-Bold', sans-serif
        color semiPurple
        text-transform uppercase
        text-align right
        margin-bottom 20px

    &-descr
        text-align justify
        font-family 'HelveticaNeue-Light', sans-serif
        font-size 14px
        line-height 24px
        color semiBlack
        white-space pre-line
        margin-bottom 20px
        max-height 115px
        height 100%
        overflow hidden
