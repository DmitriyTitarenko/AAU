.intro-slider
	margin: 20px 20px 0
	.container 
		max-width 1880px
		width: 100%
		flex-direction column
		justify-content space-between
		align-items center


.intro__slide-item
	background: url('../img/main/introbg.jpg')
	background-size cover
	background-repeat no-repeat
	position relative
	display none

	&:first-child
		display block

	&:before 
		content ''
		display block
		width 550px
		height 415px
		position absolute
		left 0 
		top 0
		background url('../img/main/sota-left.png')
		background-repeat no-repeat
		background-size: cover !important

	&:after
		content ''
		display block
		width 601px
		height 426px
		position absolute
		bottom 0
		right 0
		background url('../img/main/sota-right.png')
		background-repeat no-repeat
		background-size cover !important

.slick-initialized
	.intro__slide-item
		display block

.intro__event 
	width 100%
	display flex
	flex-direction column
	align-items center
	position relative
	padding-top 5px

	&:before 
		content ''
		display block
		width 180px
		height 131px
		background url('../img/all/logo.png') no-repeat
		position absolute
		top 60px
		left 200px
		margin-bottom 120px
		background-size cover

		@media screen and (max-width 1600px) {
			right: 75%
		}

		@media screen and (max-width 1280px) {
			display block
			position relative
			top 40px 
			right 0%
		}

		@media screen and (max-width 700px) {
			width 179px
			height 131px
		}


	.intro-logo
		display none

		@media screen and (max-width: 1280px) {
			display block
			width 261px
			height 191px
			margin 42px 0 120px 0
		}

.intro-title 
	text-transform uppercase
	font-size 62px
	color whiteColor
	text-align center
	position relative
	font-family 'Helvetica-Bold'
	font-weight 700

	@media screen and (max-width: 700px) {
		font-size 30px
		margin 0 30px 0 30px
	}

.intro-subtitle 
	color #fcdab0
	font-size 38px
	font-family 'HelveticaNeue-Bold'
	line-height 72px
	margin 20px 0 30px 0	
	width 100%
	z-index: 2
	text-align center

	@media screen and (max-width: 1280px) {
		margin 30px 0
	}

	@media screen and (max-width: 700px) {
		font-size 24px
		letter-spacing 1.2px
		line-height 36px
		margin 15px 0
	}

.main-about.container.index
	padding-top: 40px
	padding-bottom 0

	.heading.about__article-title--wrap
		.separator
			margin-bottom 20px
	


.intro-bottomtitle 
	color whiteColor
	font-size 50px
	font-weight 700 
	font-family 'HelveticaNeue-Bold'
	text-align center
	line-height 1.2
	z-index: 1

	@media screen and (max-width: 700px) {
		font-size 24px
		letter-spacing 1.2px
		width 250px
		margin: 0 40px
	}

.intro-place-wrap
	margin 20px 0
	align-self flex-start
	position relative
	height 60px
	width 500px
	background-color #2b3384
	display flex
	justify-content flex-end
	align-items center

	@media screen and (max-width: 1280px) {
		width 75%
	}

	&:after
		content ''
		position absolute
		display block
		width 50px
		height 99%
		top 0 
		right 0
		background #2b3384
		transform-origin bottom left
		transform skew(-30deg, 0deg)
	
		@media screen and (max-width: 700px) {
			width 100px
		}
	
	&:before
		content ''
		display: block
		width 100%
		position absolute
		bottom: 50%
		height: 65px
		background-image: url('../img/main/shadow.png')
		background-repeat: no-repeat
		background-size cover
		left 0px
		overflow-x hidden



.intro__place 
	color #e1e1eb
	text-transform uppercase
	align-self center
	background-color semiViolet
	font-family 'Helvetica-Bold'
	font-size 20px 
	font-weight 500
	letter-spacing 1px
	position relative
	margin 0
	text-align right
	z-index 99
	width: 100%

	@media screen and (max-width: 1280px) {
		padding 15px 25px 15px 54px
	}

	@media screen and (max-width: 700px) {
		text-align left
		font-size 18px
		letter-spacing 0.9px
		line-height 1.5
		padding 5px 10px 5px 20px
	}
		
.intro-dots
	position relative
	bottom 50px
	display flex	
	width 100%
	padding 0
	list-style none
	text-align center
	justify-content center

.intro-dots 
	li
		position relative
		height 10px
		padding 0
		cursor pointer

		&:before
			content ''
			display block
			width 19px
			height 18px
			background url('../img/all/intro-dots.png') no-repeat

		&:hover
			cursor pointer

		&:nth-child(odd)
			top 9px

		&:nth-child(1), &:nth-child(3), &:nth-child(5)
			top 9px

		button
			background-color transparent
			font-size 10px
			color transparent

	.slick-active
		&:before
			content ''
			display block
			width 19px
			height 18px
			background url('../img/all/intro-dots-actv.png') no-repeat

.event__mainfo
    display flex
    justify-content: space-between

.event__descr
    max-width: 840px
    width 100%
    display flex
    flex-direction column
    margin-right 110px

    &-title, h2
        font-size 24px
        line-height 30px
        color semiPurple
        font-family 'HelveticaNeue-Roman', sans-serif
        text-transform none
        letter-spacing 0.8px
        margin-bottom 50px

    .event__descr-infolist
        display flex
        justify-content space-between

        .event__descr-infolist--item
            max-width 180px
            width 100%
            
            &:not(:last-child)
                margin-right 50px
                

            h5, .event__descr-infolist--item---title
                font-size 16px
                line-height 18px
                color semiPurple
                font-family 'HelveticaNeue-Bold', sans-serif
                text-transform uppercase
            
            p, .event__descr-infolist--item---subtitle
                font-size 16px
                line-height 18px
                font-family 'HevleticaNeue-Light', sans-serif
                color semiBlack

.event__speaker
    display flex
    flex-direction column
    max-width 330px
    width 100%

    h4, .event__speaker-title
        font-size 22px
        font-family 'HelveticaNeue-Bold', sans-serif
        color semiViolet

    .separator
        margin 5px 0 30px 0

    .event__speaker-subtitle
        font-family 'HelveticaNeue-Light', sans-serif
        font-size 16px
        line-height 24px
        color semiBlack
        margin-bottom 30px
        font-weight 1000

    .event__speaker-personlist,
    .event__speaker-partnerlist
        display flex
        flex-direction column

.event__speaker-personlist--item
    display flex
    flex-direction column
    justify-content flex-start
    margin-bottom 20px

    &-img
        width 100%
        max-height 340px
        height 100%
        object-fit: cover

    &-wrap
        height: 100px
        background: url(../img/staff/bottom__bg.png)
        background-repeat: round
        background-size: cover
        display flex
        flex-direction column
        justify-content center

    &-title, h5
        font-family: 'HelveticaNeue-Black'
        font-size: 18px
        letter-spacing: 0.1em
        color: whiteColor
        text-align: center
        text-transform uppercase

    &-subtitle, p
        margin-top 10px
        font-size: 12px
        font-family: 'HelveticaNeue-Medium'
        font-weight: 500
        letter-spacing: 0.1em
        color whiteColor
        text-align center

.event__speaker-partnerlist--item,
.event__speaker-personlist--item
    &:not(:last-child)
        margin-bottom 30px

.event__speaker-partnerlist--imgwrap
    align-items: center
    border: 1px dotted #ccc
    background-color: #fff
    display flex
    justify-content center
    width 100%
    height 190px

.event__speaker-partnerlist--img
    max-width 80%
    max-height 80%
    object-fit: cover
