@import '../../common/common-stylus/vars'

.events__content
    .container
        flex-direction column



    #pagingControls
        margin-top 100px

    .tpc-slider.general-partners
        background-color: #f0f2f4
.events__main
    .tpc-slider.general-partners
        background-color: #f0f2f4
        
.events-pages__list
    border-bottom: 5px solid semiPurple
    width 100%
    display flex
    margin-bottom: 60px

    @media screen and (max-width 767px)
        flex-direction column
        border-bottom 0px

    &-item
        width 180px
        height 50px
        display flex
        justify-content center
        align-items center
        text-align center
        background-color rgb(240, 242, 244)
        margin-right 2px
        margin-left 2px

        &:first-child
            margin-left 0px

        &:last-child
            margin-right 0px
        
        @media screen and (max-width 767px)
            width 100%
            
.events-pages__list-item--link
    text-transform none
    font-family 'HelveticaNeue-Bold', sans-serif
    font-size 18px
    color semiPurple
    z-index 5
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center

.events-pages__list-item.active
    background-image: url('../img/all/litle-bg.jpg')
    position relative
    
    &:before
        content: ''
        position absolute
        top 0%
        left: 0%
        background-image: url('../img//all/sota-left.png')
        background-repeat: no-repeat
        width 107px
        height 50px
        background-size: cover
        background-position-x: -5px
        background-position-y: bottom
    
    .events-pages__list-item--link
        color whiteColor
        text-transform uppercase
    

.events-mainlist
    display flex
    flex-wrap wrap

    @media screen and (max-width 1280px)
        justify-content: space-between
    
    @media screen and (max-width 767px)
        align-items: center
        justify-content center
        flex-direction: column

.events-mainlist__item
    max-width 400px
    width 100%
    margin-bottom 60px
    margin-right 40px
    display flex
    flex-direction column
    justify-content: space-between
    min-height 640px

    &:nth-of-type(3n)
        margin-right 0
    
    &:nth-last-child(2),
    &:nth-last-child(3),
    &:last-child
        margin-bottom 0

        @media screen and (max-width 1280px)
            margin-bottom 40px
    
    @media screen and (max-width 1280px)
        max-width 330px
        min-width 330px
        margin-right 0
        margin-bottom 40px
    
    @media screen and (max-width 767px)
        min-width 280px
        max-width 280px


    &-imgwrap
        max-width 400px
        max-height 300px
        width 100%
        height 100%
        margin-bottom 30px

        @media screen and (max-width 1280px)
            max-width inherit
            height inherit

        @media screen and (max-width 767px)
            max-width 280px
            margin 0 auto 30px
            max-height inherit

    &-img
        width 100%
        height 100%
        object-fit cover
    
    &-titlewrap
        display flex
        flex-direction column
        justify-content space-between
        overflow hidden
        min-height: 130px

    &-title
        font-size 18px
        line-height 24px
        font-family 'HelveticaNeue-Bold', sans-serif
        color semiViolet
        min-height 70px
        // margin-bottom 40px

    .blog-entry__date
        margin-bottom 5px

        @media screen and (max-width 1280px)
            margin-top 10px
    
    &-category
        font-size 14px
        line-height 24px
        font-family 'HelveticaNeue-Bold', sans-serif
        color semiPurple
        text-transform uppercase
        text-align right
        margin-bottom 20px

    &-descr
        text-align justify
        font-family 'HelveticaNeue-Light', sans-serif
        font-size 14px
        line-height 24px
        color semiBlack
        width: 400px
        min-height: 130px
        position: relative
        margin-bottom 20px
        overflow hidden
        display block
        text-overflow: ellipsis

        @media screen and (max-width 1280px)
            width inherit




.calendar-wrap
    margin-top: 100px

    @media screen and (max-width 1280px)
        margin-top 60px
    
    @media screen and (max-width 767px)
        margin-top 40px
        max-width inherit
        width 100%

.calendar-wrap.calendar-page
    margin-top 0

.calendar-content
    display flex

    @media screen and (max-width 1280px)
        flex-direction column

    .calendar-content__object
        max-width 440px
        width 100%
        margin-right: 70px

        @media screen and (max-width 1280px)
            margin-right auto
            margin-left auto
            margin-bottom 40px
        
        @media screen and (max-width 767px)
            max-width 280px

    .calendar-content__descr
        max-width 770px
        width 100%

    .calendar-content__descr-list
        display flex
        flex-direction column

.calendar-content__descr-list--item
    position relative
    display flex

    @media screen and (max-width 767px)
        flex-direction column

    &:not(:last-of-type)
        margin-bottom 55px
    
    &:hover
        cursor pointer

    &---date
        min-width 130px
        max-width: 130px
        width 100%
        height 118px
        background-image: url('../img/events/events-bg.png')
        background-repeat no-repeat
        display flex
        flex-direction column
        align-items center
        justify-content: center
        font-family 'HelveticaNeue-Bold', sans-serif
        color whiteColor
        letter-spacing 0.1em
        line-height auto
        position relative
        padding-right 60px
        transition: .2s all ease-in-out

        @media screen and (max-width 767px)
            margin 0 auto
            padding-right: 0
            min-width 90px
            max-width 90px
            width 100%
            height 80px
            min-height 80px
            margin-bottom 20px
            background-size cover

        &__time
            font-size 36px

            @media screen and (max-width 767px)
                font-size 16px
                    
        &__month
            font-size 14px
            text-transform uppercase

            @media screen and (max-width 767px)
                font-size: 10px
                
        &__year
            font-size 24px
            padding-top 5px

            @media screen and (max-width 767px)
                font-size 16px
        
        &:after
            content ''
            display block
            position absolute
            z-index 10
            top 50%
            right 0%
            transform translateY(-50%)
            background-image: url('../img/events/events-bg-before.png')
            background-repeat no-repeat
            transition: .2s all ease-in-out
            width 60px
            height 20px

            @media screen and (max-width 767px)
                display none

.calendar-content__descr-list--item:hover > .calendar-content__descr-list--item---date,
.calendar-content__descr-list--item.active > .calendar-content__descr-list--item---date
    background-image: url('../img/events/events-bg__hover.png')


.calendar-content__descr-list--item:hover > .calendar-content__descr-list--item---date::after,
.calendar-content__descr-list--item.active > .calendar-content__descr-list--item---date::after
    background-image: url('../img/events/events-bg-before-hover.png')

.calendar-content__descr-list--item:hover > .calendar-content__descr-list--item---maininfo > .maininfo-title,
.calendar-content__descr-list--item.active > .calendar-content__descr-list--item---maininfo > .maininfo-title
    color semiPurple

.calendar-content__descr-list--item.active > .calendar-content__descr-list--item---maininfo > .maininfo-title
    margin-top 45px

    @media screen and (max-width 767px)
        margin-top 10px

.calendar-content__descr-list--item.active > .calendar-content__descr-list--item---maininfo:before
    display block

    @media screen and (max-width 767px)
        display none

.calendar-content__descr-list--item---maininfo
    display flex
    max-width 550px
    width 100%
    flex-direction column
    padding-left 30px
    position relative

    @media screen and (max-width 767px)
        padding-left 0
        max-width inherit

    &:before
        content ''
        display none
        border-left 4px dotted #0080c6
        height calc(100% - 30px)
        position: absolute
        left -13px
        top 75px
        z-index 2

    .maininfo-title
        font-size 24px
        color #3e3f40
        font-family 'HelveticaNeue-Bold', sans-serif
        margin auto 0
        transition: .2s all ease-in-out

        @media screen and (max-width 1280px)
            font-size 20px
        
        @media screen and (max-width 767px)
            font-size 16px
            text-align center

.calendar-content__descr-list--item__descr
    display none
    max-width 550px
    width 100%
    flex-direction column
    font-family 'HelveticaNeue-Roman', sans-serif
    font-size 16px
    line-height 24px
    color semiBlack

    @media screen and (max-width 767px)
        max-width inherit
        font-size 14px


.calendar-content__descr-list--item__descr-title
    font-family 'HelveticaNeue-Bold', sans-serif
    font-size 18px
    line-height 24px
    color semiPurple
    margin-top 60px
    margin-bottom 35px
    position relative

    @media screen and (max-width 767px)
        margin-top 20px
        margin-bottom: 20px
        font-size 16px

    &:before
        content ''
        display block
        position absolute
        top 50%
        transform: translateY(-50%)
        background-image url('../img/events/hexagon-before.png') 
        background-position: center center
        background-repeat no-repeat
        background-color whiteColor
        width 22px
        height 20px
        left -52px
        z-index 10
        padding-top 15px
        padding-bottom 15px

        @media screen and (max-width 767px)
            display none

.calendar-content__descr-list--item__descr-list
    list-style: disc

    @media screen and (max-width 767px)
        padding-left 20px

    &--item
        color semiPurple
        
        p
            font-family 'HelveticaNeue-Roman', sans-serif
            font-size 16px
            line-height 24px
            color semiBlack

            @media screen and (max-width 767px)
                font-size: 14px

.calendar-content__descr-list--item__descr-link
    height 80px
    max-width 330px
    width 100%
    margin-top 45px

