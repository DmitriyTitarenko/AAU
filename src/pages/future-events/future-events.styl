.calendar-wrap
    margin-top: 100px

.calendar-wrap.calendar-page
    margin-top 0

.calendar-content
    display flex

    .calendar-content__object
        max-width 440px
        width 100%
        margin-right: 70px

    .calendar-content__descr
        max-width 770px
        width 100%

    .calendar-content__descr-list
        display flex
        flex-direction column

.calendar-content__descr-list--item
    position relative
    display flex

    &:not(:last-of-type)
        margin-bottom 55px
    
    &:hover
        cursor pointer

    &---date
        max-width: 130px
        width 100%
        height 118px
        background-image: url('../img/events/events-bg.png')
        background-repeat no-repeat
        display flex
        flex-direction column
        align-items center
        font-family 'HelveticaNeue-Bold', sans-serif
        color whiteColor
        letter-spacing 0.1em
        line-height auto
        position relative
        padding-right 60px
        transition: .2s all ease-in-out

        &__time
            font-size 36px
            padding-top 12px
                    
        &__month
            font-size 18px
            text-transform uppercase
                
        &__year
            font-size 24px
            padding-top 3px
            padding-bottom: 20px
        
        &:after
            content ''
            display block
            position absolute
            z-index 10
            top 50%
            right 0%
            transform translateY(-50%)
            background-image: url('../img/events/events-bg-before.png')
            background-repeat no-repeat
            transition: .2s all ease-in-out
            width 60px
            height 20px

.calendar-content__descr-list--item:hover > .calendar-content__descr-list--item---date,
.calendar-content__descr-list--item.active > .calendar-content__descr-list--item---date
    background-image: url('../img/events/events-bg__hover.png')


.calendar-content__descr-list--item:hover > .calendar-content__descr-list--item---date::after,
.calendar-content__descr-list--item.active > .calendar-content__descr-list--item---date::after
    background-image: url('../img/events/events-bg-before-hover.png')

.calendar-content__descr-list--item:hover > .calendar-content__descr-list--item---maininfo > .maininfo-title,
.calendar-content__descr-list--item.active > .calendar-content__descr-list--item---maininfo > .maininfo-title
