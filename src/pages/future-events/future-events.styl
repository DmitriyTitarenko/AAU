.calendar-content__descr-list--item.active > .calendar-content__descr-list--item---maininfo:before
    display block

.calendar-content__descr-list--item---maininfo
    display flex
    max-width 550px
    width 100%
    flex-direction column
    padding-left 30px
    position relative

    &:before
        content ''
        display none
        border-left 4px dotted #0080c6
        height calc(100% - 30px)
        position: absolute
        left -13px
        top 75px
        z-index 2
        

    .maininfo-title
